{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#211F1E",
                "text": "#F7F7FA",
                "text.muted": "#C6C6C8",
                "text.placeholder": "#ADADAF",
                "text.disabled": "#949496",
                "text.accent": "#F0D6B7",

                // Icon colors - match text hierarchy
                "icon": "#F7F7FA",
                "icon.muted": "#C6C6C8",
                "icon.disabled": "#949496",
                "icon.placeholder": "#ADADAF",
                "icon.accent": "#F0D6B7",

                // Border colors - subtle but visible
                "border": "#636364",
                "border.variant": "#4A4A4B",
                "border.focused": "#F0D6B7",
                "border.selected": "#F0D6B7",
                "border.transparent": "#00000000",
                "border.disabled": "#313132",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#211F1E",
                "elevated_surface.background": "#373535",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#383838",
                "element.active": "#524A40",
                "element.selected": "#443E35",
                "element.disabled": "#2C2A29",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1C1C1C",
                "ghost_element.active": "#383838",
                "ghost_element.selected": "#292520",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#60564A",

                // Application frame elements
                "status_bar.background": "#2C2A29",
                "title_bar.background": "#211F1E",
                "title_bar.inactive_background": "#282625",
                "toolbar.background": "#211F1E",

                // Side panels
                "panel.background": "#211F1E",
                "panel.focused_border": "#F0D6B7",

                // Editor panes
                "pane.focused_border": "#F0D6B7",
                "pane_group.border": "#636364",

                // Tab bar and tabs
                "tab_bar.background": "#2C2A29",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#211F1E",

                // Main editor area
                "editor.background": "#211F1E",
                "editor.foreground": "#F7F7FA",
                "editor.gutter.background": "#211F1E",
                "editor.subheader.background": "#2C2A29",
                "editor.active_line.background": "#1C1C1C",
                "editor.highlighted_line.background": "#2D2617",
                "editor.line_number": "#949496",
                "editor.active_line_number": "#F7F7FA",
                "editor.invisible": "#7C7C7D",
                "editor.wrap_guide": "#636364",
                "editor.active_wrap_guide": "#949496",
                "editor.indent_guide": "#636364",
                "editor.indent_guide_active": "#949496",
                "editor.document_highlight.read_background": "#39301D",
                "editor.document_highlight.write_background": "#2C2E2D",
                "editor.document_highlight.bracket_background": "#443E35",

                // Integrated terminal
                "terminal.background": "#211F1E",
                "terminal.foreground": "#F7F7FA",
                "terminal.bright_foreground": "#F8F8FB",
                "terminal.dim_foreground": "#C6C6C8",
                "terminal.ansi.background": "#211F1E",
                "terminal.ansi.black": "#474544",
                "terminal.ansi.red": "#8E9B95",
                "terminal.ansi.green": "#DA8A59",
                "terminal.ansi.yellow": "#C1A054",
                "terminal.ansi.blue": "#F0D6B7",
                "terminal.ansi.magenta": "#FFE16F",
                "terminal.ansi.cyan": "#E7E7F0",
                "terminal.ansi.white": "#EAEBEF",
                "terminal.ansi.bright_black": "#A4A4A7",
                "terminal.ansi.bright_red": "#8E9B95",
                "terminal.ansi.bright_green": "#DA8A59",
                "terminal.ansi.bright_yellow": "#C1A054",
                "terminal.ansi.bright_blue": "#F0D6B7",
                "terminal.ansi.bright_magenta": "#FFE16F",
                "terminal.ansi.bright_cyan": "#E7E7F0",
                "terminal.ansi.bright_white": "#EAEBEF",

                // Search functionality
                "search.match_background": "#5A4D2E",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7C7C7D",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#ADADAF",

                // Status indicators - success, warning, error, info
                "success": "#DA8A59",
                "success.background": "#3F2A1E",
                "success.border": "#DA8A59",

                "warning": "#C1A054",
                "warning.background": "#39301D",
                "warning.border": "#C1A054",

                "error": "#8E9B95",
                "error.background": "#2C2E2D",
                "error.border": "#8E9B95",

                "info": "#F0D6B7",
                "info.background": "#443E35",
                "info.border": "#F0D6B7",

                "hint": "#C6C6C8",
                "hint.background": "#2A2A2A",
                "hint.border": "#C6C6C8",

                // Git status colors
                "created": "#DA8A59",
                "created.background": "#3F2A1E",
                "created.border": "#DA8A59",

                "modified": "#C1A054",
                "modified.background": "#39301D",
                "modified.border": "#C1A054",

                "deleted": "#8E9B95",
                "deleted.background": "#2C2E2D",
                "deleted.border": "#8E9B95",

                "renamed": "#F0D6B7",
                "renamed.background": "#443E35",
                "renamed.border": "#F0D6B7",

                "conflict": "#FFE16F",
                "conflict.background": "#484023",
                "conflict.border": "#FFE16F",

                "ignored": "#ADADAF",
                "ignored.background": "#1C1C1C",
                "ignored.border": "#ADADAF",

                "hidden": "#949496",
                "hidden.background": "transparent",
                "hidden.border": "#949496",

                "predictive": "#ADADAF",
                "predictive.background": "#1C1C1C",
                "predictive.border": "#ADADAF",

                "unreachable": "#7C7C7D",
                "unreachable.background": "#282625",
                "unreachable.border": "#7C7C7D",

                // Link styling
                "link_text.hover": "#F2DABE",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#C6C6C8",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#DEDEE1",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#8E9B95"
                    },

                    // Strings
                    "string": {
                        "color": "#DA8A59"
                    },
                    "string.escape": {
                        "color": "#E7E7F0"
                    },
                    "string.regex": {
                        "color": "#E7E7F0"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#C1A054"
                    },
                    "constant": {
                        "color": "#C1A054"
                    },
                    "boolean": {
                        "color": "#FFE16F"
                    },

                    // Functions
                    "function": {
                        "color": "#F0D6B7"
                    },
                    "constructor": {
                        "color": "#F0D6B7"
                    },

                    // Types
                    "type": {
                        "color": "#FFE16F"
                    },
                    "enum": {
                        "color": "#FFE16F"
                    },

                    // Variables
                    "variable": {
                        "color": "#F7F7FA"
                    },
                    "variable.special": {
                        "color": "#FFE16F"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#F0D6B7"
                    },
                    "attribute": {
                        "color": "#C1A054"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#E7E7F0"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#DEDEE1"
                    },
                    "punctuation.bracket": {
                        "color": "#F7F7FA"
                    },
                    "punctuation.delimiter": {
                        "color": "#DEDEE1"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#8E9B95"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#F0D6B7"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#DA8A59"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#F0D6B7",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#F0D6B7",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#E7E7F0"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#F7F7FA"
                    },
                    "preproc": {
                        "color": "#8E9B95"
                    },
                    "primary": {
                        "color": "#F7F7FA"
                    },
                    "variant": {
                        "color": "#FFE16F"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#C6C6C8",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#ADADAF",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#F0D6B7",
                        "background": "#F0D6B7",
                        "selection": "#60564A"
                    },
                    {
                        "cursor": "#DA8A59",
                        "background": "#DA8A59",
                        "selection": "#583B2A"
                    },
                    {
                        "cursor": "#C1A054",
                        "background": "#C1A054",
                        "selection": "#4F4328"
                    },
                    {
                        "cursor": "#FFE16F",
                        "background": "#FFE16F",
                        "selection": "#655A31"
                    }
                ]
            }
        }
    ]
}
