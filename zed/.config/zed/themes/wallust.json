{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#20191A",
                "text": "#FEFCD5",
                "text.muted": "#CBCAAA",
                "text.placeholder": "#B2B095",
                "text.disabled": "#989780",
                "text.accent": "#FFCFDE",

                // Icon colors - match text hierarchy
                "icon": "#FEFCD5",
                "icon.muted": "#CBCAAA",
                "icon.disabled": "#989780",
                "icon.placeholder": "#B2B095",
                "icon.accent": "#FFCFDE",

                // Border colors - subtle but visible
                "border": "#666555",
                "border.variant": "#4C4C40",
                "border.focused": "#FFCFDE",
                "border.selected": "#FFCFDE",
                "border.transparent": "#00000000",
                "border.disabled": "#33322B",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#20191A",
                "elevated_surface.background": "#363031",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#393830",
                "element.active": "#56464A",
                "element.selected": "#483A3E",
                "element.disabled": "#2B2425",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1D1C18",
                "ghost_element.active": "#393830",
                "ghost_element.selected": "#2B2325",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#655157",

                // Application frame elements
                "status_bar.background": "#2B2425",
                "title_bar.background": "#20191A",
                "title_bar.inactive_background": "#272021",
                "toolbar.background": "#20191A",

                // Side panels
                "panel.background": "#20191A",
                "panel.focused_border": "#FFCFDE",

                // Editor panes
                "pane.focused_border": "#FFCFDE",
                "pane_group.border": "#666555",

                // Tab bar and tabs
                "tab_bar.background": "#2B2425",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#20191A",

                // Main editor area
                "editor.background": "#20191A",
                "editor.foreground": "#FEFCD5",
                "editor.gutter.background": "#20191A",
                "editor.subheader.background": "#2B2425",
                "editor.active_line.background": "#1D1C18",
                "editor.highlighted_line.background": "#392414",
                "editor.line_number": "#989780",
                "editor.active_line_number": "#FEFCD5",
                "editor.invisible": "#7F7E6B",
                "editor.wrap_guide": "#666555",
                "editor.active_wrap_guide": "#989780",
                "editor.indent_guide": "#666555",
                "editor.indent_guide_active": "#989780",
                "editor.document_highlight.read_background": "#482D19",
                "editor.document_highlight.write_background": "#2C2C35",
                "editor.document_highlight.bracket_background": "#483A3E",

                // Integrated terminal
                "terminal.background": "#20191A",
                "terminal.foreground": "#FEFCD5",
                "terminal.bright_foreground": "#FEFCD9",
                "terminal.dim_foreground": "#CBCAAA",
                "terminal.ansi.background": "#20191A",
                "terminal.ansi.black": "#474041",
                "terminal.ansi.red": "#9096BA",
                "terminal.ansi.green": "#F48D83",
                "terminal.ansi.yellow": "#FE9B48",
                "terminal.ansi.blue": "#FFCFDE",
                "terminal.ansi.magenta": "#FEDCB8",
                "terminal.ansi.cyan": "#FBF686",
                "terminal.ansi.white": "#F5F2BA",
                "terminal.ansi.bright_black": "#ABA982",
                "terminal.ansi.bright_red": "#9096BA",
                "terminal.ansi.bright_green": "#F48D83",
                "terminal.ansi.bright_yellow": "#FE9B48",
                "terminal.ansi.bright_blue": "#FFCFDE",
                "terminal.ansi.bright_magenta": "#FEDCB8",
                "terminal.ansi.bright_cyan": "#FBF686",
                "terminal.ansi.bright_white": "#F5F2BA",

                // Search functionality
                "search.match_background": "#724827",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7F7E6B",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#B2B095",

                // Status indicators - success, warning, error, info
                "success": "#F48D83",
                "success.background": "#452A27",
                "success.border": "#F48D83",

                "warning": "#FE9B48",
                "warning.background": "#482D19",
                "warning.border": "#FE9B48",

                "error": "#9096BA",
                "error.background": "#2C2C35",
                "error.border": "#9096BA",

                "info": "#FFCFDE",
                "info.background": "#483A3E",
                "info.border": "#FFCFDE",

                "hint": "#CBCAAA",
                "hint.background": "#2B2A24",
                "hint.border": "#CBCAAA",

                // Git status colors
                "created": "#F48D83",
                "created.background": "#452A27",
                "created.border": "#F48D83",

                "modified": "#FE9B48",
                "modified.background": "#482D19",
                "modified.border": "#FE9B48",

                "deleted": "#9096BA",
                "deleted.background": "#2C2C35",
                "deleted.border": "#9096BA",

                "renamed": "#FFCFDE",
                "renamed.background": "#483A3E",
                "renamed.border": "#FFCFDE",

                "conflict": "#FEDCB8",
                "conflict.background": "#483E35",
                "conflict.border": "#FEDCB8",

                "ignored": "#B2B095",
                "ignored.background": "#1D1C18",
                "ignored.border": "#B2B095",

                "hidden": "#989780",
                "hidden.background": "transparent",
                "hidden.border": "#989780",

                "predictive": "#B2B095",
                "predictive.background": "#1D1C18",
                "predictive.border": "#B2B095",

                "unreachable": "#7F7E6B",
                "unreachable.background": "#272021",
                "unreachable.border": "#7F7E6B",

                // Link styling
                "link_text.hover": "#FFD4E1",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#CBCAAA",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E5E3C0",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#9096BA"
                    },

                    // Strings
                    "string": {
                        "color": "#F48D83"
                    },
                    "string.escape": {
                        "color": "#FBF686"
                    },
                    "string.regex": {
                        "color": "#FBF686"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#FE9B48"
                    },
                    "constant": {
                        "color": "#FE9B48"
                    },
                    "boolean": {
                        "color": "#FEDCB8"
                    },

                    // Functions
                    "function": {
                        "color": "#FFCFDE"
                    },
                    "constructor": {
                        "color": "#FFCFDE"
                    },

                    // Types
                    "type": {
                        "color": "#FEDCB8"
                    },
                    "enum": {
                        "color": "#FEDCB8"
                    },

                    // Variables
                    "variable": {
                        "color": "#FEFCD5"
                    },
                    "variable.special": {
                        "color": "#FEDCB8"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#FFCFDE"
                    },
                    "attribute": {
                        "color": "#FE9B48"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#FBF686"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E5E3C0"
                    },
                    "punctuation.bracket": {
                        "color": "#FEFCD5"
                    },
                    "punctuation.delimiter": {
                        "color": "#E5E3C0"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#9096BA"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#FFCFDE"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#F48D83"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#FFCFDE",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#FFCFDE",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#FBF686"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FEFCD5"
                    },
                    "preproc": {
                        "color": "#9096BA"
                    },
                    "primary": {
                        "color": "#FEFCD5"
                    },
                    "variant": {
                        "color": "#FEDCB8"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#CBCAAA",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#B2B095",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#FFCFDE",
                        "background": "#FFCFDE",
                        "selection": "#655157"
                    },
                    {
                        "cursor": "#F48D83",
                        "background": "#F48D83",
                        "selection": "#613A37"
                    },
                    {
                        "cursor": "#FE9B48",
                        "background": "#FE9B48",
                        "selection": "#643F22"
                    },
                    {
                        "cursor": "#FEDCB8",
                        "background": "#FEDCB8",
                        "selection": "#64564A"
                    }
                ]
            }
        }
    ]
}
