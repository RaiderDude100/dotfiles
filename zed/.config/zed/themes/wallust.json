{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#1D1C1A",
                "text": "#F2E9D8",
                "text.muted": "#C2BAAD",
                "text.placeholder": "#A9A397",
                "text.disabled": "#918C82",
                "text.accent": "#C37944",

                // Icon colors - match text hierarchy
                "icon": "#F2E9D8",
                "icon.muted": "#C2BAAD",
                "icon.disabled": "#918C82",
                "icon.placeholder": "#A9A397",
                "icon.accent": "#C37944",

                // Border colors - subtle but visible
                "border": "#615D56",
                "border.variant": "#494641",
                "border.focused": "#C37944",
                "border.selected": "#C37944",
                "border.transparent": "#00000000",
                "border.disabled": "#302F2B",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#1D1C1A",
                "elevated_surface.background": "#343331",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#363430",
                "element.active": "#432C1C",
                "element.selected": "#382518",
                "element.disabled": "#282725",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1B1A18",
                "ghost_element.active": "#363430",
                "ghost_element.selected": "#22160E",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#4E3421",

                // Application frame elements
                "status_bar.background": "#282725",
                "title_bar.background": "#1D1C1A",
                "title_bar.inactive_background": "#242321",
                "toolbar.background": "#1D1C1A",

                // Side panels
                "panel.background": "#1D1C1A",
                "panel.focused_border": "#C37944",

                // Editor panes
                "pane.focused_border": "#C37944",
                "pane_group.border": "#615D56",

                // Tab bar and tabs
                "tab_bar.background": "#282725",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#1D1C1A",

                // Main editor area
                "editor.background": "#1D1C1A",
                "editor.foreground": "#F2E9D8",
                "editor.gutter.background": "#1D1C1A",
                "editor.subheader.background": "#282725",
                "editor.active_line.background": "#1B1A18",
                "editor.highlighted_line.background": "#181F23",
                "editor.line_number": "#918C82",
                "editor.active_line_number": "#F2E9D8",
                "editor.invisible": "#79756C",
                "editor.wrap_guide": "#615D56",
                "editor.active_wrap_guide": "#918C82",
                "editor.indent_guide": "#615D56",
                "editor.indent_guide_active": "#918C82",
                "editor.document_highlight.read_background": "#1E262C",
                "editor.document_highlight.write_background": "#32160C",
                "editor.document_highlight.bracket_background": "#382518",

                // Integrated terminal
                "terminal.background": "#1D1C1A",
                "terminal.foreground": "#F2E9D8",
                "terminal.bright_foreground": "#F3EBDC",
                "terminal.dim_foreground": "#C2BAAD",
                "terminal.ansi.background": "#1D1C1A",
                "terminal.ansi.black": "#444240",
                "terminal.ansi.red": "#AA3A13",
                "terminal.ansi.green": "#78645A",
                "terminal.ansi.yellow": "#597E96",
                "terminal.ansi.blue": "#C37944",
                "terminal.ansi.magenta": "#918D75",
                "terminal.ansi.cyan": "#DAC08F",
                "terminal.ansi.white": "#E4D7BF",
                "terminal.ansi.bright_black": "#A09785",
                "terminal.ansi.bright_red": "#AA3A13",
                "terminal.ansi.bright_green": "#78645A",
                "terminal.ansi.bright_yellow": "#597E96",
                "terminal.ansi.bright_blue": "#C37944",
                "terminal.ansi.bright_magenta": "#918D75",
                "terminal.ansi.bright_cyan": "#DAC08F",
                "terminal.ansi.bright_white": "#E4D7BF",

                // Search functionality
                "search.match_background": "#2F3E46",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#79756C",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#A9A397",

                // Status indicators - success, warning, error, info
                "success": "#78645A",
                "success.background": "#25201D",
                "success.border": "#78645A",

                "warning": "#597E96",
                "warning.background": "#1E262C",
                "warning.border": "#597E96",

                "error": "#AA3A13",
                "error.background": "#32160C",
                "error.border": "#AA3A13",

                "info": "#C37944",
                "info.background": "#382518",
                "info.border": "#C37944",

                "hint": "#C2BAAD",
                "hint.background": "#292724",
                "hint.border": "#C2BAAD",

                // Git status colors
                "created": "#78645A",
                "created.background": "#25201D",
                "created.border": "#78645A",

                "modified": "#597E96",
                "modified.background": "#1E262C",
                "modified.border": "#597E96",

                "deleted": "#AA3A13",
                "deleted.background": "#32160C",
                "deleted.border": "#AA3A13",

                "renamed": "#C37944",
                "renamed.background": "#382518",
                "renamed.border": "#C37944",

                "conflict": "#918D75",
                "conflict.background": "#2C2A24",
                "conflict.border": "#918D75",

                "ignored": "#A9A397",
                "ignored.background": "#1B1A18",
                "ignored.border": "#A9A397",

                "hidden": "#918C82",
                "hidden.background": "transparent",
                "hidden.border": "#918C82",

                "predictive": "#A9A397",
                "predictive.background": "#1B1A18",
                "predictive.border": "#A9A397",

                "unreachable": "#79756C",
                "unreachable.background": "#242321",
                "unreachable.border": "#79756C",

                // Link styling
                "link_text.hover": "#C98657",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#C2BAAD",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#DAD2C2",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#AA3A13"
                    },

                    // Strings
                    "string": {
                        "color": "#78645A"
                    },
                    "string.escape": {
                        "color": "#DAC08F"
                    },
                    "string.regex": {
                        "color": "#DAC08F"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#597E96"
                    },
                    "constant": {
                        "color": "#597E96"
                    },
                    "boolean": {
                        "color": "#918D75"
                    },

                    // Functions
                    "function": {
                        "color": "#C37944"
                    },
                    "constructor": {
                        "color": "#C37944"
                    },

                    // Types
                    "type": {
                        "color": "#918D75"
                    },
                    "enum": {
                        "color": "#918D75"
                    },

                    // Variables
                    "variable": {
                        "color": "#F2E9D8"
                    },
                    "variable.special": {
                        "color": "#918D75"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#C37944"
                    },
                    "attribute": {
                        "color": "#597E96"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#DAC08F"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#DAD2C2"
                    },
                    "punctuation.bracket": {
                        "color": "#F2E9D8"
                    },
                    "punctuation.delimiter": {
                        "color": "#DAD2C2"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#AA3A13"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#C37944"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#78645A"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#C37944",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#C37944",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#DAC08F"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#F2E9D8"
                    },
                    "preproc": {
                        "color": "#AA3A13"
                    },
                    "primary": {
                        "color": "#F2E9D8"
                    },
                    "variant": {
                        "color": "#918D75"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#C2BAAD",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#A9A397",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#C37944",
                        "background": "#C37944",
                        "selection": "#4E3421"
                    },
                    {
                        "cursor": "#78645A",
                        "background": "#78645A",
                        "selection": "#342D29"
                    },
                    {
                        "cursor": "#597E96",
                        "background": "#597E96",
                        "selection": "#29363E"
                    },
                    {
                        "cursor": "#918D75",
                        "background": "#918D75",
                        "selection": "#3D3B32"
                    }
                ]
            }
        }
    ]
}
