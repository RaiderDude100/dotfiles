{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#1C1C1E",
                "text": "#D5E3F9",
                "text.muted": "#AAB6C7",
                "text.placeholder": "#959FAE",
                "text.disabled": "#808895",
                "text.accent": "#B39ACC",

                // Icon colors - match text hierarchy
                "icon": "#D5E3F9",
                "icon.muted": "#AAB6C7",
                "icon.disabled": "#808895",
                "icon.placeholder": "#959FAE",
                "icon.accent": "#B39ACC",

                // Border colors - subtle but visible
                "border": "#555B64",
                "border.variant": "#40444B",
                "border.focused": "#B39ACC",
                "border.selected": "#B39ACC",
                "border.transparent": "#00000000",
                "border.disabled": "#2B2D32",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#1C1C1E",
                "elevated_surface.background": "#333335",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#303338",
                "element.active": "#3E3746",
                "element.selected": "#342E3B",
                "element.disabled": "#272729",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#181A1C",
                "ghost_element.active": "#303338",
                "ghost_element.selected": "#1F1B23",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#494052",

                // Application frame elements
                "status_bar.background": "#272729",
                "title_bar.background": "#1C1C1E",
                "title_bar.inactive_background": "#232325",
                "toolbar.background": "#1C1C1E",

                // Side panels
                "panel.background": "#1C1C1E",
                "panel.focused_border": "#B39ACC",

                // Editor panes
                "pane.focused_border": "#B39ACC",
                "pane_group.border": "#555B64",

                // Tab bar and tabs
                "tab_bar.background": "#272729",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#1C1C1E",

                // Main editor area
                "editor.background": "#1C1C1E",
                "editor.foreground": "#D5E3F9",
                "editor.gutter.background": "#1C1C1E",
                "editor.subheader.background": "#272729",
                "editor.active_line.background": "#181A1C",
                "editor.highlighted_line.background": "#2E1A1F",
                "editor.line_number": "#808895",
                "editor.active_line_number": "#D5E3F9",
                "editor.invisible": "#6B727D",
                "editor.wrap_guide": "#555B64",
                "editor.active_wrap_guide": "#808895",
                "editor.indent_guide": "#555B64",
                "editor.indent_guide_active": "#808895",
                "editor.document_highlight.read_background": "#3A2127",
                "editor.document_highlight.write_background": "#1F181C",
                "editor.document_highlight.bracket_background": "#342E3B",

                // Integrated terminal
                "terminal.background": "#1C1C1E",
                "terminal.foreground": "#D5E3F9",
                "terminal.bright_foreground": "#D9E6FA",
                "terminal.dim_foreground": "#AAB6C7",
                "terminal.ansi.background": "#1C1C1E",
                "terminal.ansi.black": "#424245",
                "terminal.ansi.red": "#5F4352",
                "terminal.ansi.green": "#5C73A5",
                "terminal.ansi.yellow": "#CB687F",
                "terminal.ansi.blue": "#B39ACC",
                "terminal.ansi.magenta": "#57B4C2",
                "terminal.ansi.cyan": "#88AEEF",
                "terminal.ansi.white": "#BBCEEF",
                "terminal.ansi.bright_black": "#8390A7",
                "terminal.ansi.bright_red": "#5F4352",
                "terminal.ansi.bright_green": "#5C73A5",
                "terminal.ansi.bright_yellow": "#CB687F",
                "terminal.ansi.bright_blue": "#B39ACC",
                "terminal.ansi.bright_magenta": "#57B4C2",
                "terminal.ansi.bright_cyan": "#88AEEF",
                "terminal.ansi.bright_white": "#BBCEEF",

                // Search functionality
                "search.match_background": "#5D353E",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#6B727D",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#959FAE",

                // Status indicators - success, warning, error, info
                "success": "#5C73A5",
                "success.background": "#1E2431",
                "success.border": "#5C73A5",

                "warning": "#CB687F",
                "warning.background": "#3A2127",
                "warning.border": "#CB687F",

                "error": "#5F4352",
                "error.background": "#1F181C",
                "error.border": "#5F4352",

                "info": "#B39ACC",
                "info.background": "#342E3B",
                "info.border": "#B39ACC",

                "hint": "#AAB6C7",
                "hint.background": "#24262A",
                "hint.border": "#AAB6C7",

                // Git status colors
                "created": "#5C73A5",
                "created.background": "#1E2431",
                "created.border": "#5C73A5",

                "modified": "#CB687F",
                "modified.background": "#3A2127",
                "modified.border": "#CB687F",

                "deleted": "#5F4352",
                "deleted.background": "#1F181C",
                "deleted.border": "#5F4352",

                "renamed": "#B39ACC",
                "renamed.background": "#342E3B",
                "renamed.border": "#B39ACC",

                "conflict": "#57B4C2",
                "conflict.background": "#1D3438",
                "conflict.border": "#57B4C2",

                "ignored": "#959FAE",
                "ignored.background": "#181A1C",
                "ignored.border": "#959FAE",

                "hidden": "#808895",
                "hidden.background": "transparent",
                "hidden.border": "#808895",

                "predictive": "#959FAE",
                "predictive.background": "#181A1C",
                "predictive.border": "#959FAE",

                "unreachable": "#6B727D",
                "unreachable.background": "#232325",
                "unreachable.border": "#6B727D",

                // Link styling
                "link_text.hover": "#BBA4D1",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#AAB6C7",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#C0CCE0",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#5F4352"
                    },

                    // Strings
                    "string": {
                        "color": "#5C73A5"
                    },
                    "string.escape": {
                        "color": "#88AEEF"
                    },
                    "string.regex": {
                        "color": "#88AEEF"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#CB687F"
                    },
                    "constant": {
                        "color": "#CB687F"
                    },
                    "boolean": {
                        "color": "#57B4C2"
                    },

                    // Functions
                    "function": {
                        "color": "#B39ACC"
                    },
                    "constructor": {
                        "color": "#B39ACC"
                    },

                    // Types
                    "type": {
                        "color": "#57B4C2"
                    },
                    "enum": {
                        "color": "#57B4C2"
                    },

                    // Variables
                    "variable": {
                        "color": "#D5E3F9"
                    },
                    "variable.special": {
                        "color": "#57B4C2"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#B39ACC"
                    },
                    "attribute": {
                        "color": "#CB687F"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#88AEEF"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#C0CCE0"
                    },
                    "punctuation.bracket": {
                        "color": "#D5E3F9"
                    },
                    "punctuation.delimiter": {
                        "color": "#C0CCE0"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#5F4352"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#B39ACC"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#5C73A5"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#B39ACC",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#B39ACC",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#88AEEF"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#D5E3F9"
                    },
                    "preproc": {
                        "color": "#5F4352"
                    },
                    "primary": {
                        "color": "#D5E3F9"
                    },
                    "variant": {
                        "color": "#57B4C2"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#AAB6C7",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#959FAE",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#B39ACC",
                        "background": "#B39ACC",
                        "selection": "#494052"
                    },
                    {
                        "cursor": "#5C73A5",
                        "background": "#5C73A5",
                        "selection": "#2A3245"
                    },
                    {
                        "cursor": "#CB687F",
                        "background": "#CB687F",
                        "selection": "#512E37"
                    },
                    {
                        "cursor": "#57B4C2",
                        "background": "#57B4C2",
                        "selection": "#29494E"
                    }
                ]
            }
        }
    ]
}
