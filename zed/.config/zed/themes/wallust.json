{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#15171C",
                "text": "#E4F7FF",
                "text.muted": "#B6C6CC",
                "text.placeholder": "#A0ADB2",
                "text.disabled": "#899499",
                "text.accent": "#DFBB1C",

                // Icon colors - match text hierarchy
                "icon": "#E4F7FF",
                "icon.muted": "#B6C6CC",
                "icon.disabled": "#899499",
                "icon.placeholder": "#A0ADB2",
                "icon.accent": "#DFBB1C",

                // Border colors - subtle but visible
                "border": "#5B6366",
                "border.variant": "#444A4C",
                "border.focused": "#DFBB1C",
                "border.selected": "#DFBB1C",
                "border.transparent": "#00000000",
                "border.disabled": "#2E3133",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#15171C",
                "elevated_surface.background": "#2C2E33",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#323639",
                "element.active": "#493F11",
                "element.selected": "#3D350E",
                "element.disabled": "#212327",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#191B1C",
                "ghost_element.active": "#323639",
                "ghost_element.selected": "#252008",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#554A14",

                // Application frame elements
                "status_bar.background": "#212327",
                "title_bar.background": "#15171C",
                "title_bar.inactive_background": "#1C1E23",
                "toolbar.background": "#15171C",

                // Side panels
                "panel.background": "#15171C",
                "panel.focused_border": "#DFBB1C",

                // Editor panes
                "pane.focused_border": "#DFBB1C",
                "pane_group.border": "#5B6366",

                // Tab bar and tabs
                "tab_bar.background": "#212327",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#15171C",

                // Main editor area
                "editor.background": "#15171C",
                "editor.foreground": "#E4F7FF",
                "editor.gutter.background": "#15171C",
                "editor.subheader.background": "#212327",
                "editor.active_line.background": "#191B1C",
                "editor.highlighted_line.background": "#052839",
                "editor.line_number": "#899499",
                "editor.active_line_number": "#E4F7FF",
                "editor.invisible": "#727C80",
                "editor.wrap_guide": "#5B6366",
                "editor.active_wrap_guide": "#899499",
                "editor.indent_guide": "#5B6366",
                "editor.indent_guide_active": "#899499",
                "editor.document_highlight.read_background": "#063347",
                "editor.document_highlight.write_background": "#2E2824",
                "editor.document_highlight.bracket_background": "#3D350E",

                // Integrated terminal
                "terminal.background": "#15171C",
                "terminal.foreground": "#E4F7FF",
                "terminal.bright_foreground": "#E7F8FF",
                "terminal.dim_foreground": "#B6C6CC",
                "terminal.ansi.background": "#15171C",
                "terminal.ansi.black": "#3C3E44",
                "terminal.ansi.red": "#A28A75",
                "terminal.ansi.green": "#7BAC86",
                "terminal.ansi.yellow": "#02B3FF",
                "terminal.ansi.blue": "#DFBB1C",
                "terminal.ansi.magenta": "#D5D4B7",
                "terminal.ansi.cyan": "#B3E8FE",
                "terminal.ansi.white": "#D0EBF6",
                "terminal.ansi.bright_black": "#92A5AC",
                "terminal.ansi.bright_red": "#A28A75",
                "terminal.ansi.bright_green": "#7BAC86",
                "terminal.ansi.bright_yellow": "#02B3FF",
                "terminal.ansi.bright_blue": "#DFBB1C",
                "terminal.ansi.bright_magenta": "#D5D4B7",
                "terminal.ansi.bright_cyan": "#B3E8FE",
                "terminal.ansi.bright_white": "#D0EBF6",

                // Search functionality
                "search.match_background": "#0A5172",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#727C80",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#A0ADB2",

                // Status indicators - success, warning, error, info
                "success": "#7BAC86",
                "success.background": "#243128",
                "success.border": "#7BAC86",

                "warning": "#02B3FF",
                "warning.background": "#063347",
                "warning.border": "#02B3FF",

                "error": "#A28A75",
                "error.background": "#2E2824",
                "error.border": "#A28A75",

                "info": "#DFBB1C",
                "info.background": "#3D350E",
                "info.border": "#DFBB1C",

                "hint": "#B6C6CC",
                "hint.background": "#26292B",
                "hint.border": "#B6C6CC",

                // Git status colors
                "created": "#7BAC86",
                "created.background": "#243128",
                "created.border": "#7BAC86",

                "modified": "#02B3FF",
                "modified.background": "#063347",
                "modified.border": "#02B3FF",

                "deleted": "#A28A75",
                "deleted.background": "#2E2824",
                "deleted.border": "#A28A75",

                "renamed": "#DFBB1C",
                "renamed.background": "#3D350E",
                "renamed.border": "#DFBB1C",

                "conflict": "#D5D4B7",
                "conflict.background": "#3B3B35",
                "conflict.border": "#D5D4B7",

                "ignored": "#A0ADB2",
                "ignored.background": "#191B1C",
                "ignored.border": "#A0ADB2",

                "hidden": "#899499",
                "hidden.background": "transparent",
                "hidden.border": "#899499",

                "predictive": "#A0ADB2",
                "predictive.background": "#191B1C",
                "predictive.border": "#A0ADB2",

                "unreachable": "#727C80",
                "unreachable.background": "#1C1E23",
                "unreachable.border": "#727C80",

                // Link styling
                "link_text.hover": "#E2C233",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#B6C6CC",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#CDDEE6",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#A28A75"
                    },

                    // Strings
                    "string": {
                        "color": "#7BAC86"
                    },
                    "string.escape": {
                        "color": "#B3E8FE"
                    },
                    "string.regex": {
                        "color": "#B3E8FE"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#02B3FF"
                    },
                    "constant": {
                        "color": "#02B3FF"
                    },
                    "boolean": {
                        "color": "#D5D4B7"
                    },

                    // Functions
                    "function": {
                        "color": "#DFBB1C"
                    },
                    "constructor": {
                        "color": "#DFBB1C"
                    },

                    // Types
                    "type": {
                        "color": "#D5D4B7"
                    },
                    "enum": {
                        "color": "#D5D4B7"
                    },

                    // Variables
                    "variable": {
                        "color": "#E4F7FF"
                    },
                    "variable.special": {
                        "color": "#D5D4B7"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#DFBB1C"
                    },
                    "attribute": {
                        "color": "#02B3FF"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#B3E8FE"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#CDDEE6"
                    },
                    "punctuation.bracket": {
                        "color": "#E4F7FF"
                    },
                    "punctuation.delimiter": {
                        "color": "#CDDEE6"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#A28A75"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#DFBB1C"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#7BAC86"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#DFBB1C",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#DFBB1C",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#B3E8FE"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#E4F7FF"
                    },
                    "preproc": {
                        "color": "#A28A75"
                    },
                    "primary": {
                        "color": "#E4F7FF"
                    },
                    "variant": {
                        "color": "#D5D4B7"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#B6C6CC",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#A0ADB2",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#DFBB1C",
                        "background": "#DFBB1C",
                        "selection": "#554A14"
                    },
                    {
                        "cursor": "#7BAC86",
                        "background": "#7BAC86",
                        "selection": "#324539"
                    },
                    {
                        "cursor": "#02B3FF",
                        "background": "#02B3FF",
                        "selection": "#084763"
                    },
                    {
                        "cursor": "#D5D4B7",
                        "background": "#D5D4B7",
                        "selection": "#52534A"
                    }
                ]
            }
        }
    ]
}
