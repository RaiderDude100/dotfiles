{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#241D1C",
                "text": "#F0E8DE",
                "text.muted": "#C0BAB2",
                "text.placeholder": "#A8A29B",
                "text.disabled": "#908B85",
                "text.accent": "#BAB745",

                // Icon colors - match text hierarchy
                "icon": "#F0E8DE",
                "icon.muted": "#C0BAB2",
                "icon.disabled": "#908B85",
                "icon.placeholder": "#A8A29B",
                "icon.accent": "#BAB745",

                // Border colors - subtle but visible
                "border": "#605D59",
                "border.variant": "#484643",
                "border.focused": "#BAB745",
                "border.selected": "#BAB745",
                "border.transparent": "#00000000",
                "border.disabled": "#302E2C",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#241D1C",
                "elevated_surface.background": "#3A3433",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#373432",
                "element.active": "#43401D",
                "element.selected": "#383519",
                "element.disabled": "#2F2827",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1C1A19",
                "ghost_element.active": "#373432",
                "ghost_element.selected": "#21200F",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#4E4A22",

                // Application frame elements
                "status_bar.background": "#2F2827",
                "title_bar.background": "#241D1C",
                "title_bar.inactive_background": "#2B2423",
                "toolbar.background": "#241D1C",

                // Side panels
                "panel.background": "#241D1C",
                "panel.focused_border": "#BAB745",

                // Editor panes
                "pane.focused_border": "#BAB745",
                "pane_group.border": "#605D59",

                // Tab bar and tabs
                "tab_bar.background": "#2F2827",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#241D1C",

                // Main editor area
                "editor.background": "#241D1C",
                "editor.foreground": "#F0E8DE",
                "editor.gutter.background": "#241D1C",
                "editor.subheader.background": "#2F2827",
                "editor.active_line.background": "#1C1A19",
                "editor.highlighted_line.background": "#362525",
                "editor.line_number": "#908B85",
                "editor.active_line_number": "#F0E8DE",
                "editor.invisible": "#78746F",
                "editor.wrap_guide": "#605D59",
                "editor.active_wrap_guide": "#908B85",
                "editor.indent_guide": "#605D59",
                "editor.indent_guide_active": "#908B85",
                "editor.document_highlight.read_background": "#432E2E",
                "editor.document_highlight.write_background": "#282A1E",
                "editor.document_highlight.bracket_background": "#383519",

                // Integrated terminal
                "terminal.background": "#241D1C",
                "terminal.foreground": "#F0E8DE",
                "terminal.bright_foreground": "#F2EAE1",
                "terminal.dim_foreground": "#C0BAB2",
                "terminal.ansi.background": "#241D1C",
                "terminal.ansi.black": "#4B4342",
                "terminal.ansi.red": "#7A8D5C",
                "terminal.ansi.green": "#5F9594",
                "terminal.ansi.yellow": "#E79A9C",
                "terminal.ansi.blue": "#BAB745",
                "terminal.ansi.magenta": "#F3A706",
                "terminal.ansi.cyan": "#D5BCA0",
                "terminal.ansi.white": "#E2D5C7",
                "terminal.ansi.bright_black": "#9E958B",
                "terminal.ansi.bright_red": "#7A8D5C",
                "terminal.ansi.bright_green": "#5F9594",
                "terminal.ansi.bright_yellow": "#E79A9C",
                "terminal.ansi.bright_blue": "#BAB745",
                "terminal.ansi.bright_magenta": "#F3A706",
                "terminal.ansi.bright_cyan": "#D5BCA0",
                "terminal.ansi.bright_white": "#E2D5C7",

                // Search functionality
                "search.match_background": "#6B4A4A",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#78746F",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#A8A29B",

                // Status indicators - success, warning, error, info
                "success": "#5F9594",
                "success.background": "#212C2C",
                "success.border": "#5F9594",

                "warning": "#E79A9C",
                "warning.background": "#432E2E",
                "warning.border": "#E79A9C",

                "error": "#7A8D5C",
                "error.background": "#282A1E",
                "error.border": "#7A8D5C",

                "info": "#BAB745",
                "info.background": "#383519",
                "info.border": "#BAB745",

                "hint": "#C0BAB2",
                "hint.background": "#292726",
                "hint.border": "#C0BAB2",

                // Git status colors
                "created": "#5F9594",
                "created.background": "#212C2C",
                "created.border": "#5F9594",

                "modified": "#E79A9C",
                "modified.background": "#432E2E",
                "modified.border": "#E79A9C",

                "deleted": "#7A8D5C",
                "deleted.background": "#282A1E",
                "deleted.border": "#7A8D5C",

                "renamed": "#BAB745",
                "renamed.background": "#383519",
                "renamed.border": "#BAB745",

                "conflict": "#F3A706",
                "conflict.background": "#463108",
                "conflict.border": "#F3A706",

                "ignored": "#A8A29B",
                "ignored.background": "#1C1A19",
                "ignored.border": "#A8A29B",

                "hidden": "#908B85",
                "hidden.background": "transparent",
                "hidden.border": "#908B85",

                "predictive": "#A8A29B",
                "predictive.background": "#1C1A19",
                "predictive.border": "#A8A29B",

                "unreachable": "#78746F",
                "unreachable.background": "#2B2423",
                "unreachable.border": "#78746F",

                // Link styling
                "link_text.hover": "#C1BE58",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#C0BAB2",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#D8D1C8",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#7A8D5C"
                    },

                    // Strings
                    "string": {
                        "color": "#5F9594"
                    },
                    "string.escape": {
                        "color": "#D5BCA0"
                    },
                    "string.regex": {
                        "color": "#D5BCA0"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#E79A9C"
                    },
                    "constant": {
                        "color": "#E79A9C"
                    },
                    "boolean": {
                        "color": "#F3A706"
                    },

                    // Functions
                    "function": {
                        "color": "#BAB745"
                    },
                    "constructor": {
                        "color": "#BAB745"
                    },

                    // Types
                    "type": {
                        "color": "#F3A706"
                    },
                    "enum": {
                        "color": "#F3A706"
                    },

                    // Variables
                    "variable": {
                        "color": "#F0E8DE"
                    },
                    "variable.special": {
                        "color": "#F3A706"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#BAB745"
                    },
                    "attribute": {
                        "color": "#E79A9C"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#D5BCA0"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#D8D1C8"
                    },
                    "punctuation.bracket": {
                        "color": "#F0E8DE"
                    },
                    "punctuation.delimiter": {
                        "color": "#D8D1C8"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#7A8D5C"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#BAB745"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#5F9594"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#BAB745",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#BAB745",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#D5BCA0"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#F0E8DE"
                    },
                    "preproc": {
                        "color": "#7A8D5C"
                    },
                    "primary": {
                        "color": "#F0E8DE"
                    },
                    "variant": {
                        "color": "#F3A706"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#C0BAB2",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#A8A29B",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#BAB745",
                        "background": "#BAB745",
                        "selection": "#4E4A22"
                    },
                    {
                        "cursor": "#5F9594",
                        "background": "#5F9594",
                        "selection": "#2E3E3E"
                    },
                    {
                        "cursor": "#E79A9C",
                        "background": "#E79A9C",
                        "selection": "#5E4040"
                    },
                    {
                        "cursor": "#F3A706",
                        "background": "#F3A706",
                        "selection": "#62450C"
                    }
                ]
            }
        }
    ]
}
