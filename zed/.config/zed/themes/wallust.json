{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#211F1E",
                "text": "#FAF1E6",
                "text.muted": "#C8C1B8",
                "text.placeholder": "#AFA9A1",
                "text.disabled": "#96918A",
                "text.accent": "#8A9D9B",

                // Icon colors - match text hierarchy
                "icon": "#FAF1E6",
                "icon.muted": "#C8C1B8",
                "icon.disabled": "#96918A",
                "icon.placeholder": "#AFA9A1",
                "icon.accent": "#8A9D9B",

                // Border colors - subtle but visible
                "border": "#64605C",
                "border.variant": "#4B4845",
                "border.focused": "#8A9D9B",
                "border.selected": "#8A9D9B",
                "border.transparent": "#00000000",
                "border.disabled": "#32302E",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#211F1E",
                "elevated_surface.background": "#373535",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#393634",
                "element.active": "#343837",
                "element.selected": "#2B2F2E",
                "element.disabled": "#2C2A29",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1C1B1A",
                "ghost_element.active": "#393634",
                "ghost_element.selected": "#1A1C1C",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#3C4240",

                // Application frame elements
                "status_bar.background": "#2C2A29",
                "title_bar.background": "#211F1E",
                "title_bar.inactive_background": "#282625",
                "toolbar.background": "#211F1E",

                // Side panels
                "panel.background": "#211F1E",
                "panel.focused_border": "#8A9D9B",

                // Editor panes
                "pane.focused_border": "#8A9D9B",
                "pane_group.border": "#64605C",

                // Tab bar and tabs
                "tab_bar.background": "#2C2A29",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#211F1E",

                // Main editor area
                "editor.background": "#211F1E",
                "editor.foreground": "#FAF1E6",
                "editor.gutter.background": "#211F1E",
                "editor.subheader.background": "#2C2A29",
                "editor.active_line.background": "#1C1B1A",
                "editor.highlighted_line.background": "#282321",
                "editor.line_number": "#96918A",
                "editor.active_line_number": "#FAF1E6",
                "editor.invisible": "#7D7973",
                "editor.wrap_guide": "#64605C",
                "editor.active_wrap_guide": "#96918A",
                "editor.indent_guide": "#64605C",
                "editor.indent_guide_active": "#96918A",
                "editor.document_highlight.read_background": "#322C2A",
                "editor.document_highlight.write_background": "#242021",
                "editor.document_highlight.bracket_background": "#2B2F2E",

                // Integrated terminal
                "terminal.background": "#211F1E",
                "terminal.foreground": "#FAF1E6",
                "terminal.bright_foreground": "#FBF2E9",
                "terminal.dim_foreground": "#C8C1B8",
                "terminal.ansi.background": "#211F1E",
                "terminal.ansi.black": "#474544",
                "terminal.ansi.red": "#6D6066",
                "terminal.ansi.green": "#AB8C49",
                "terminal.ansi.yellow": "#A58F88",
                "terminal.ansi.blue": "#8A9D9B",
                "terminal.ansi.magenta": "#FDC22D",
                "terminal.ansi.cyan": "#F0D6B7",
                "terminal.ansi.white": "#EFE2D3",
                "terminal.ansi.bright_black": "#A79E93",
                "terminal.ansi.bright_red": "#6D6066",
                "terminal.ansi.bright_green": "#AB8C49",
                "terminal.ansi.bright_yellow": "#A58F88",
                "terminal.ansi.bright_blue": "#8A9D9B",
                "terminal.ansi.bright_magenta": "#FDC22D",
                "terminal.ansi.bright_cyan": "#F0D6B7",
                "terminal.ansi.bright_white": "#EFE2D3",

                // Search functionality
                "search.match_background": "#4F4642",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7D7973",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#AFA9A1",

                // Status indicators - success, warning, error, info
                "success": "#AB8C49",
                "success.background": "#332B1A",
                "success.border": "#AB8C49",

                "warning": "#A58F88",
                "warning.background": "#322C2A",
                "warning.border": "#A58F88",

                "error": "#6D6066",
                "error.background": "#242021",
                "error.border": "#6D6066",

                "info": "#8A9D9B",
                "info.background": "#2B2F2E",
                "info.border": "#8A9D9B",

                "hint": "#C8C1B8",
                "hint.background": "#2B2927",
                "hint.border": "#C8C1B8",

                // Git status colors
                "created": "#AB8C49",
                "created.background": "#332B1A",
                "created.border": "#AB8C49",

                "modified": "#A58F88",
                "modified.background": "#322C2A",
                "modified.border": "#A58F88",

                "deleted": "#6D6066",
                "deleted.background": "#242021",
                "deleted.border": "#6D6066",

                "renamed": "#8A9D9B",
                "renamed.background": "#2B2F2E",
                "renamed.border": "#8A9D9B",

                "conflict": "#FDC22D",
                "conflict.background": "#483913",
                "conflict.border": "#FDC22D",

                "ignored": "#AFA9A1",
                "ignored.background": "#1C1B1A",
                "ignored.border": "#AFA9A1",

                "hidden": "#96918A",
                "hidden.background": "transparent",
                "hidden.border": "#96918A",

                "predictive": "#AFA9A1",
                "predictive.background": "#1C1B1A",
                "predictive.border": "#AFA9A1",

                "unreachable": "#7D7973",
                "unreachable.background": "#282625",
                "unreachable.border": "#7D7973",

                // Link styling
                "link_text.hover": "#96A7A5",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#C8C1B8",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E1D9CF",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#6D6066"
                    },

                    // Strings
                    "string": {
                        "color": "#AB8C49"
                    },
                    "string.escape": {
                        "color": "#F0D6B7"
                    },
                    "string.regex": {
                        "color": "#F0D6B7"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#A58F88"
                    },
                    "constant": {
                        "color": "#A58F88"
                    },
                    "boolean": {
                        "color": "#FDC22D"
                    },

                    // Functions
                    "function": {
                        "color": "#8A9D9B"
                    },
                    "constructor": {
                        "color": "#8A9D9B"
                    },

                    // Types
                    "type": {
                        "color": "#FDC22D"
                    },
                    "enum": {
                        "color": "#FDC22D"
                    },

                    // Variables
                    "variable": {
                        "color": "#FAF1E6"
                    },
                    "variable.special": {
                        "color": "#FDC22D"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#8A9D9B"
                    },
                    "attribute": {
                        "color": "#A58F88"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#F0D6B7"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E1D9CF"
                    },
                    "punctuation.bracket": {
                        "color": "#FAF1E6"
                    },
                    "punctuation.delimiter": {
                        "color": "#E1D9CF"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#6D6066"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#8A9D9B"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#AB8C49"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#8A9D9B",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#8A9D9B",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#F0D6B7"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FAF1E6"
                    },
                    "preproc": {
                        "color": "#6D6066"
                    },
                    "primary": {
                        "color": "#FAF1E6"
                    },
                    "variant": {
                        "color": "#FDC22D"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#C8C1B8",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#AFA9A1",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#8A9D9B",
                        "background": "#8A9D9B",
                        "selection": "#3C4240"
                    },
                    {
                        "cursor": "#AB8C49",
                        "background": "#AB8C49",
                        "selection": "#473C24"
                    },
                    {
                        "cursor": "#A58F88",
                        "background": "#A58F88",
                        "selection": "#453D3A"
                    },
                    {
                        "cursor": "#FDC22D",
                        "background": "#FDC22D",
                        "selection": "#644F1B"
                    }
                ]
            }
        }
    ]
}
