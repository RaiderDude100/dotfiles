{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#080006",
                "text": "#FFEBD2",
                "text.muted": "#CCBCA8",
                "text.placeholder": "#B2A593",
                "text.disabled": "#998D7E",
                "text.accent": "#C698A8",

                // Icon colors - match text hierarchy
                "icon": "#FFEBD2",
                "icon.muted": "#CCBCA8",
                "icon.disabled": "#998D7E",
                "icon.placeholder": "#B2A593",
                "icon.accent": "#C698A8",

                // Border colors - subtle but visible
                "border": "#665E54",
                "border.variant": "#4C463F",
                "border.focused": "#C698A8",
                "border.selected": "#C698A8",
                "border.transparent": "#00000000",
                "border.disabled": "#332F2A",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#080006",
                "elevated_surface.background": "#211A1F",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#352F2B",
                "element.active": "#3E2E34",
                "element.selected": "#34262C",
                "element.disabled": "#140D12",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1A1816",
                "ghost_element.active": "#352F2B",
                "ghost_element.selected": "#1F171A",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#48353D",

                // Application frame elements
                "status_bar.background": "#140D12",
                "title_bar.background": "#080006",
                "title_bar.inactive_background": "#0F080D",
                "toolbar.background": "#080006",

                // Side panels
                "panel.background": "#080006",
                "panel.focused_border": "#C698A8",

                // Editor panes
                "pane.focused_border": "#C698A8",
                "pane_group.border": "#665E54",

                // Tab bar and tabs
                "tab_bar.background": "#140D12",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#080006",

                // Main editor area
                "editor.background": "#080006",
                "editor.foreground": "#FFEBD2",
                "editor.gutter.background": "#080006",
                "editor.subheader.background": "#140D12",
                "editor.active_line.background": "#1A1816",
                "editor.highlighted_line.background": "#141A24",
                "editor.line_number": "#998D7E",
                "editor.active_line_number": "#FFEBD2",
                "editor.invisible": "#807669",
                "editor.wrap_guide": "#665E54",
                "editor.active_wrap_guide": "#998D7E",
                "editor.indent_guide": "#665E54",
                "editor.indent_guide_active": "#998D7E",
                "editor.document_highlight.read_background": "#19212D",
                "editor.document_highlight.write_background": "#251C1B",
                "editor.document_highlight.bracket_background": "#34262C",

                // Integrated terminal
                "terminal.background": "#080006",
                "terminal.foreground": "#FFEBD2",
                "terminal.bright_foreground": "#FFEDD7",
                "terminal.dim_foreground": "#CCBCA8",
                "terminal.ansi.background": "#080006",
                "terminal.ansi.black": "#080006",
                "terminal.ansi.red": "#8D6E66",
                "terminal.ansi.green": "#9371AA",
                "terminal.ansi.yellow": "#5C84AD",
                "terminal.ansi.blue": "#C698A8",
                "terminal.ansi.magenta": "#FFA38A",
                "terminal.ansi.cyan": "#FFC67F",
                "terminal.ansi.white": "#F6DAB7",
                "terminal.ansi.bright_black": "#AD9980",
                "terminal.ansi.bright_red": "#8D6E66",
                "terminal.ansi.bright_green": "#9371AA",
                "terminal.ansi.bright_yellow": "#5C84AD",
                "terminal.ansi.bright_blue": "#C698A8",
                "terminal.ansi.bright_magenta": "#FFA38A",
                "terminal.ansi.bright_cyan": "#FFC67F",
                "terminal.ansi.bright_white": "#F6DAB7",

                // Search functionality
                "search.match_background": "#283548",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#807669",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#B2A593",

                // Status indicators - success, warning, error, info
                "success": "#9371AA",
                "success.background": "#271D2C",
                "success.border": "#9371AA",

                "warning": "#5C84AD",
                "warning.background": "#19212D",
                "warning.border": "#5C84AD",

                "error": "#8D6E66",
                "error.background": "#251C1B",
                "error.border": "#8D6E66",

                "info": "#C698A8",
                "info.background": "#34262C",
                "info.border": "#C698A8",

                "hint": "#CCBCA8",
                "hint.background": "#282320",
                "hint.border": "#CCBCA8",

                // Git status colors
                "created": "#9371AA",
                "created.background": "#271D2C",
                "created.border": "#9371AA",

                "modified": "#5C84AD",
                "modified.background": "#19212D",
                "modified.border": "#5C84AD",

                "deleted": "#8D6E66",
                "deleted.background": "#251C1B",
                "deleted.border": "#8D6E66",

                "renamed": "#C698A8",
                "renamed.background": "#34262C",
                "renamed.border": "#C698A8",

                "conflict": "#FFA38A",
                "conflict.background": "#422924",
                "conflict.border": "#FFA38A",

                "ignored": "#B2A593",
                "ignored.background": "#1A1816",
                "ignored.border": "#B2A593",

                "hidden": "#998D7E",
                "hidden.background": "transparent",
                "hidden.border": "#998D7E",

                "predictive": "#B2A593",
                "predictive.background": "#1A1816",
                "predictive.border": "#B2A593",

                "unreachable": "#807669",
                "unreachable.background": "#0F080D",
                "unreachable.border": "#807669",

                // Link styling
                "link_text.hover": "#CCA2B1",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#CCBCA8",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E6D4BD",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#8D6E66"
                    },

                    // Strings
                    "string": {
                        "color": "#9371AA"
                    },
                    "string.escape": {
                        "color": "#FFC67F"
                    },
                    "string.regex": {
                        "color": "#FFC67F"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#5C84AD"
                    },
                    "constant": {
                        "color": "#5C84AD"
                    },
                    "boolean": {
                        "color": "#FFA38A"
                    },

                    // Functions
                    "function": {
                        "color": "#C698A8"
                    },
                    "constructor": {
                        "color": "#C698A8"
                    },

                    // Types
                    "type": {
                        "color": "#FFA38A"
                    },
                    "enum": {
                        "color": "#FFA38A"
                    },

                    // Variables
                    "variable": {
                        "color": "#FFEBD2"
                    },
                    "variable.special": {
                        "color": "#FFA38A"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#C698A8"
                    },
                    "attribute": {
                        "color": "#5C84AD"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#FFC67F"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E6D4BD"
                    },
                    "punctuation.bracket": {
                        "color": "#FFEBD2"
                    },
                    "punctuation.delimiter": {
                        "color": "#E6D4BD"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#8D6E66"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#C698A8"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#9371AA"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#C698A8",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#C698A8",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#FFC67F"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FFEBD2"
                    },
                    "preproc": {
                        "color": "#8D6E66"
                    },
                    "primary": {
                        "color": "#FFEBD2"
                    },
                    "variant": {
                        "color": "#FFA38A"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#CCBCA8",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#B2A593",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#C698A8",
                        "background": "#C698A8",
                        "selection": "#48353D"
                    },
                    {
                        "cursor": "#9371AA",
                        "background": "#9371AA",
                        "selection": "#37283E"
                    },
                    {
                        "cursor": "#5C84AD",
                        "background": "#5C84AD",
                        "selection": "#232E3F"
                    },
                    {
                        "cursor": "#FFA38A",
                        "background": "#FFA38A",
                        "selection": "#5C3932"
                    }
                ]
            }
        }
    ]
}
