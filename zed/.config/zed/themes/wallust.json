{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#1A1B20",
                "text": "#FDFADC",
                "text.muted": "#CAC8B0",
                "text.placeholder": "#B1AF9A",
                "text.disabled": "#989684",
                "text.accent": "#CCA62B",

                // Icon colors - match text hierarchy
                "icon": "#FDFADC",
                "icon.muted": "#CAC8B0",
                "icon.disabled": "#989684",
                "icon.placeholder": "#B1AF9A",
                "icon.accent": "#CCA62B",

                // Border colors - subtle but visible
                "border": "#656458",
                "border.variant": "#4C4B42",
                "border.focused": "#CCA62B",
                "border.selected": "#CCA62B",
                "border.transparent": "#00000000",
                "border.disabled": "#33322C",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#1A1B20",
                "elevated_surface.background": "#313236",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#383832",
                "element.active": "#453A17",
                "element.selected": "#3A3013",
                "element.disabled": "#25262B",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1C1C19",
                "ghost_element.active": "#383832",
                "ghost_element.selected": "#231D0B",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#50431B",

                // Application frame elements
                "status_bar.background": "#25262B",
                "title_bar.background": "#1A1B20",
                "title_bar.inactive_background": "#212227",
                "toolbar.background": "#1A1B20",

                // Side panels
                "panel.background": "#1A1B20",
                "panel.focused_border": "#CCA62B",

                // Editor panes
                "pane.focused_border": "#CCA62B",
                "pane_group.border": "#656458",

                // Tab bar and tabs
                "tab_bar.background": "#25262B",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#1A1B20",

                // Main editor area
                "editor.background": "#1A1B20",
                "editor.foreground": "#FDFADC",
                "editor.gutter.background": "#1A1B20",
                "editor.subheader.background": "#25262B",
                "editor.active_line.background": "#1C1C19",
                "editor.highlighted_line.background": "#382107",
                "editor.line_number": "#989684",
                "editor.active_line_number": "#FDFADC",
                "editor.invisible": "#7F7D6E",
                "editor.wrap_guide": "#656458",
                "editor.active_wrap_guide": "#989684",
                "editor.indent_guide": "#656458",
                "editor.indent_guide_active": "#989684",
                "editor.document_highlight.read_background": "#462908",
                "editor.document_highlight.write_background": "#421F18",
                "editor.document_highlight.bracket_background": "#3A3013",

                // Integrated terminal
                "terminal.background": "#1A1B20",
                "terminal.foreground": "#FDFADC",
                "terminal.bright_foreground": "#FDFBE0",
                "terminal.dim_foreground": "#CAC8B0",
                "terminal.ansi.background": "#1A1B20",
                "terminal.ansi.black": "#414247",
                "terminal.ansi.red": "#EB5E3F",
                "terminal.ansi.green": "#B19085",
                "terminal.ansi.yellow": "#FF8802",
                "terminal.ansi.blue": "#CCA62B",
                "terminal.ansi.magenta": "#FFCA9B",
                "terminal.ansi.cyan": "#F9F29A",
                "terminal.ansi.white": "#F4F0C4",
                "terminal.ansi.bright_black": "#AAA889",
                "terminal.ansi.bright_red": "#EB5E3F",
                "terminal.ansi.bright_green": "#B19085",
                "terminal.ansi.bright_yellow": "#FF8802",
                "terminal.ansi.bright_blue": "#CCA62B",
                "terminal.ansi.bright_magenta": "#FFCA9B",
                "terminal.ansi.bright_cyan": "#F9F29A",
                "terminal.ansi.bright_white": "#F4F0C4",

                // Search functionality
                "search.match_background": "#70420E",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7F7D6E",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#B1AF9A",

                // Status indicators - success, warning, error, info
                "success": "#B19085",
                "success.background": "#332B29",
                "success.border": "#B19085",

                "warning": "#FF8802",
                "warning.background": "#462908",
                "warning.border": "#FF8802",

                "error": "#EB5E3F",
                "error.background": "#421F18",
                "error.border": "#EB5E3F",

                "info": "#CCA62B",
                "info.background": "#3A3013",
                "info.border": "#CCA62B",

                "hint": "#CAC8B0",
                "hint.background": "#2A2A26",
                "hint.border": "#CAC8B0",

                // Git status colors
                "created": "#B19085",
                "created.background": "#332B29",
                "created.border": "#B19085",

                "modified": "#FF8802",
                "modified.background": "#462908",
                "modified.border": "#FF8802",

                "deleted": "#EB5E3F",
                "deleted.background": "#421F18",
                "deleted.border": "#EB5E3F",

                "renamed": "#CCA62B",
                "renamed.background": "#3A3013",
                "renamed.border": "#CCA62B",

                "conflict": "#FFCA9B",
                "conflict.background": "#463A2F",
                "conflict.border": "#FFCA9B",

                "ignored": "#B1AF9A",
                "ignored.background": "#1C1C19",
                "ignored.border": "#B1AF9A",

                "hidden": "#989684",
                "hidden.background": "transparent",
                "hidden.border": "#989684",

                "predictive": "#B1AF9A",
                "predictive.background": "#1C1C19",
                "predictive.border": "#B1AF9A",

                "unreachable": "#7F7D6E",
                "unreachable.background": "#212227",
                "unreachable.border": "#7F7D6E",

                // Link styling
                "link_text.hover": "#D1AF40",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#CAC8B0",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E4E1C6",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#EB5E3F"
                    },

                    // Strings
                    "string": {
                        "color": "#B19085"
                    },
                    "string.escape": {
                        "color": "#F9F29A"
                    },
                    "string.regex": {
                        "color": "#F9F29A"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#FF8802"
                    },
                    "constant": {
                        "color": "#FF8802"
                    },
                    "boolean": {
                        "color": "#FFCA9B"
                    },

                    // Functions
                    "function": {
                        "color": "#CCA62B"
                    },
                    "constructor": {
                        "color": "#CCA62B"
                    },

                    // Types
                    "type": {
                        "color": "#FFCA9B"
                    },
                    "enum": {
                        "color": "#FFCA9B"
                    },

                    // Variables
                    "variable": {
                        "color": "#FDFADC"
                    },
                    "variable.special": {
                        "color": "#FFCA9B"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#CCA62B"
                    },
                    "attribute": {
                        "color": "#FF8802"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#F9F29A"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E4E1C6"
                    },
                    "punctuation.bracket": {
                        "color": "#FDFADC"
                    },
                    "punctuation.delimiter": {
                        "color": "#E4E1C6"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#EB5E3F"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#CCA62B"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#B19085"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#CCA62B",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#CCA62B",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#F9F29A"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FDFADC"
                    },
                    "preproc": {
                        "color": "#EB5E3F"
                    },
                    "primary": {
                        "color": "#FDFADC"
                    },
                    "variant": {
                        "color": "#FFCA9B"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#CAC8B0",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#B1AF9A",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#CCA62B",
                        "background": "#CCA62B",
                        "selection": "#50431B"
                    },
                    {
                        "cursor": "#B19085",
                        "background": "#B19085",
                        "selection": "#473C39"
                    },
                    {
                        "cursor": "#FF8802",
                        "background": "#FF8802",
                        "selection": "#62390C"
                    },
                    {
                        "cursor": "#FFCA9B",
                        "background": "#FFCA9B",
                        "selection": "#625042"
                    }
                ]
            }
        }
    ]
}
