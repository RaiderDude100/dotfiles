{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#252428",
                "text": "#FEF7F1",
                "text.muted": "#CBC6C1",
                "text.placeholder": "#B2ADA9",
                "text.disabled": "#989491",
                "text.accent": "#20E6D4",

                // Icon colors - match text hierarchy
                "icon": "#FEF7F1",
                "icon.muted": "#CBC6C1",
                "icon.disabled": "#989491",
                "icon.placeholder": "#B2ADA9",
                "icon.accent": "#20E6D4",

                // Border colors - subtle but visible
                "border": "#666360",
                "border.variant": "#4C4A48",
                "border.focused": "#20E6D4",
                "border.selected": "#20E6D4",
                "border.transparent": "#00000000",
                "border.disabled": "#333130",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#252428",
                "elevated_surface.background": "#3B3A3E",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#3A3938",
                "element.active": "#14504C",
                "element.selected": "#11423F",
                "element.disabled": "#302F33",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1D1C1C",
                "ghost_element.active": "#3A3938",
                "ghost_element.selected": "#0A2826",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#185D58",

                // Application frame elements
                "status_bar.background": "#302F33",
                "title_bar.background": "#252428",
                "title_bar.inactive_background": "#2C2B2E",
                "toolbar.background": "#252428",

                // Side panels
                "panel.background": "#252428",
                "panel.focused_border": "#20E6D4",

                // Editor panes
                "pane.focused_border": "#20E6D4",
                "pane_group.border": "#666360",

                // Tab bar and tabs
                "tab_bar.background": "#302F33",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#252428",

                // Main editor area
                "editor.background": "#252428",
                "editor.foreground": "#FEF7F1",
                "editor.gutter.background": "#252428",
                "editor.subheader.background": "#302F33",
                "editor.active_line.background": "#1D1C1C",
                "editor.highlighted_line.background": "#342A1D",
                "editor.line_number": "#989491",
                "editor.active_line_number": "#FEF7F1",
                "editor.invisible": "#7F7C79",
                "editor.wrap_guide": "#666360",
                "editor.active_wrap_guide": "#989491",
                "editor.indent_guide": "#666360",
                "editor.indent_guide_active": "#989491",
                "editor.document_highlight.read_background": "#403424",
                "editor.document_highlight.write_background": "#452529",
                "editor.document_highlight.bracket_background": "#11423F",

                // Integrated terminal
                "terminal.background": "#252428",
                "terminal.foreground": "#FEF7F1",
                "terminal.bright_foreground": "#FEF8F2",
                "terminal.dim_foreground": "#CBC6C1",
                "terminal.ansi.background": "#252428",
                "terminal.ansi.black": "#4B4A4E",
                "terminal.ansi.red": "#EE707D",
                "terminal.ansi.green": "#F476FF",
                "terminal.ansi.yellow": "#DDAB68",
                "terminal.ansi.blue": "#20E6D4",
                "terminal.ansi.magenta": "#DBE0FC",
                "terminal.ansi.cyan": "#FBE9D7",
                "terminal.ansi.white": "#F5ECE2",
                "terminal.ansi.bright_black": "#ABA59F",
                "terminal.ansi.bright_red": "#EE707D",
                "terminal.ansi.bright_green": "#F476FF",
                "terminal.ansi.bright_yellow": "#DDAB68",
                "terminal.ansi.bright_blue": "#20E6D4",
                "terminal.ansi.bright_magenta": "#DBE0FC",
                "terminal.ansi.bright_cyan": "#FBE9D7",
                "terminal.ansi.bright_white": "#F5ECE2",

                // Search functionality
                "search.match_background": "#67533A",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7F7C79",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#B2ADA9",

                // Status indicators - success, warning, error, info
                "success": "#F476FF",
                "success.background": "#46264A",
                "success.border": "#F476FF",

                "warning": "#DDAB68",
                "warning.background": "#403424",
                "warning.border": "#DDAB68",

                "error": "#EE707D",
                "error.background": "#452529",
                "error.border": "#EE707D",

                "info": "#20E6D4",
                "info.background": "#11423F",
                "info.border": "#20E6D4",

                "hint": "#CBC6C1",
                "hint.background": "#2C2B2A",
                "hint.border": "#CBC6C1",

                // Git status colors
                "created": "#F476FF",
                "created.background": "#46264A",
                "created.border": "#F476FF",

                "modified": "#DDAB68",
                "modified.background": "#403424",
                "modified.border": "#DDAB68",

                "deleted": "#EE707D",
                "deleted.background": "#452529",
                "deleted.border": "#EE707D",

                "renamed": "#20E6D4",
                "renamed.background": "#11423F",
                "renamed.border": "#20E6D4",

                "conflict": "#DBE0FC",
                "conflict.background": "#404149",
                "conflict.border": "#DBE0FC",

                "ignored": "#B2ADA9",
                "ignored.background": "#1D1C1C",
                "ignored.border": "#B2ADA9",

                "hidden": "#989491",
                "hidden.background": "transparent",
                "hidden.border": "#989491",

                "predictive": "#B2ADA9",
                "predictive.background": "#1D1C1C",
                "predictive.border": "#B2ADA9",

                "unreachable": "#7F7C79",
                "unreachable.background": "#2C2B2E",
                "unreachable.border": "#7F7C79",

                // Link styling
                "link_text.hover": "#36E9D8",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#CBC6C1",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E5DED9",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#EE707D"
                    },

                    // Strings
                    "string": {
                        "color": "#F476FF"
                    },
                    "string.escape": {
                        "color": "#FBE9D7"
                    },
                    "string.regex": {
                        "color": "#FBE9D7"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#DDAB68"
                    },
                    "constant": {
                        "color": "#DDAB68"
                    },
                    "boolean": {
                        "color": "#DBE0FC"
                    },

                    // Functions
                    "function": {
                        "color": "#20E6D4"
                    },
                    "constructor": {
                        "color": "#20E6D4"
                    },

                    // Types
                    "type": {
                        "color": "#DBE0FC"
                    },
                    "enum": {
                        "color": "#DBE0FC"
                    },

                    // Variables
                    "variable": {
                        "color": "#FEF7F1"
                    },
                    "variable.special": {
                        "color": "#DBE0FC"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#20E6D4"
                    },
                    "attribute": {
                        "color": "#DDAB68"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#FBE9D7"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E5DED9"
                    },
                    "punctuation.bracket": {
                        "color": "#FEF7F1"
                    },
                    "punctuation.delimiter": {
                        "color": "#E5DED9"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#EE707D"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#20E6D4"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#F476FF"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#20E6D4",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#20E6D4",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#FBE9D7"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FEF7F1"
                    },
                    "preproc": {
                        "color": "#EE707D"
                    },
                    "primary": {
                        "color": "#FEF7F1"
                    },
                    "variant": {
                        "color": "#DBE0FC"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#CBC6C1",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#B2ADA9",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#20E6D4",
                        "background": "#20E6D4",
                        "selection": "#185D58"
                    },
                    {
                        "cursor": "#F476FF",
                        "background": "#F476FF",
                        "selection": "#633668"
                    },
                    {
                        "cursor": "#DDAB68",
                        "background": "#DDAB68",
                        "selection": "#5A4932"
                    },
                    {
                        "cursor": "#DBE0FC",
                        "background": "#DBE0FC",
                        "selection": "#5A5B66"
                    }
                ]
            }
        }
    ]
}
