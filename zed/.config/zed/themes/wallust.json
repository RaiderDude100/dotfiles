{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#222620",
                "text": "#F6F6D5",
                "text.muted": "#C5C5AA",
                "text.placeholder": "#ACAC95",
                "text.disabled": "#949480",
                "text.accent": "#9C9E84",

                // Icon colors - match text hierarchy
                "icon": "#F6F6D5",
                "icon.muted": "#C5C5AA",
                "icon.disabled": "#949480",
                "icon.placeholder": "#ACAC95",
                "icon.accent": "#9C9E84",

                // Border colors - subtle but visible
                "border": "#626255",
                "border.variant": "#4A4A40",
                "border.focused": "#9C9E84",
                "border.selected": "#9C9E84",
                "border.transparent": "#00000000",
                "border.disabled": "#31312B",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#222620",
                "elevated_surface.background": "#383C36",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#383931",
                "element.active": "#393B31",
                "element.selected": "#303129",
                "element.disabled": "#2D312B",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1C1C19",
                "ghost_element.active": "#383931",
                "ghost_element.selected": "#1C1D19",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#424539",

                // Application frame elements
                "status_bar.background": "#2D312B",
                "title_bar.background": "#222620",
                "title_bar.inactive_background": "#292D27",
                "toolbar.background": "#222620",

                // Side panels
                "panel.background": "#222620",
                "panel.focused_border": "#9C9E84",

                // Editor panes
                "pane.focused_border": "#9C9E84",
                "pane_group.border": "#626255",

                // Tab bar and tabs
                "tab_bar.background": "#2D312B",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#222620",

                // Main editor area
                "editor.background": "#222620",
                "editor.foreground": "#F6F6D5",
                "editor.gutter.background": "#222620",
                "editor.subheader.background": "#2D312B",
                "editor.active_line.background": "#1C1C19",
                "editor.highlighted_line.background": "#191D1A",
                "editor.line_number": "#949480",
                "editor.active_line_number": "#F6F6D5",
                "editor.invisible": "#7B7B6B",
                "editor.wrap_guide": "#626255",
                "editor.active_wrap_guide": "#949480",
                "editor.indent_guide": "#626255",
                "editor.indent_guide_active": "#949480",
                "editor.document_highlight.read_background": "#1F2420",
                "editor.document_highlight.write_background": "#201D12",
                "editor.document_highlight.bracket_background": "#303129",

                // Integrated terminal
                "terminal.background": "#222620",
                "terminal.foreground": "#F6F6D5",
                "terminal.bright_foreground": "#F7F7D9",
                "terminal.dim_foreground": "#C5C5AA",
                "terminal.ansi.background": "#222620",
                "terminal.ansi.black": "#484B45",
                "terminal.ansi.red": "#5B4C27",
                "terminal.ansi.green": "#486C19",
                "terminal.ansi.yellow": "#596C62",
                "terminal.ansi.blue": "#9C9E84",
                "terminal.ansi.magenta": "#86AE21",
                "terminal.ansi.cyan": "#E4E588",
                "terminal.ansi.white": "#E9EABB",
                "terminal.ansi.bright_black": "#A3A383",
                "terminal.ansi.bright_red": "#5B4C27",
                "terminal.ansi.bright_green": "#486C19",
                "terminal.ansi.bright_yellow": "#596C62",
                "terminal.ansi.bright_blue": "#9C9E84",
                "terminal.ansi.bright_magenta": "#86AE21",
                "terminal.ansi.bright_cyan": "#E4E588",
                "terminal.ansi.bright_white": "#E9EABB",

                // Search functionality
                "search.match_background": "#323A34",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7B7B6B",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#ACAC95",

                // Status indicators - success, warning, error, info
                "success": "#486C19",
                "success.background": "#1B240F",
                "success.border": "#486C19",

                "warning": "#596C62",
                "warning.background": "#1F2420",
                "warning.border": "#596C62",

                "error": "#5B4C27",
                "error.background": "#201D12",
                "error.border": "#5B4C27",

                "info": "#9C9E84",
                "info.background": "#303129",
                "info.border": "#9C9E84",

                "hint": "#C5C5AA",
                "hint.background": "#2A2B25",
                "hint.border": "#C5C5AA",

                // Git status colors
                "created": "#486C19",
                "created.background": "#1B240F",
                "created.border": "#486C19",

                "modified": "#596C62",
                "modified.background": "#1F2420",
                "modified.border": "#596C62",

                "deleted": "#5B4C27",
                "deleted.background": "#201D12",
                "deleted.border": "#5B4C27",

                "renamed": "#9C9E84",
                "renamed.background": "#303129",
                "renamed.border": "#9C9E84",

                "conflict": "#86AE21",
                "conflict.background": "#2A3510",
                "conflict.border": "#86AE21",

                "ignored": "#ACAC95",
                "ignored.background": "#1C1C19",
                "ignored.border": "#ACAC95",

                "hidden": "#949480",
                "hidden.background": "transparent",
                "hidden.border": "#949480",

                "predictive": "#ACAC95",
                "predictive.background": "#1C1C19",
                "predictive.border": "#ACAC95",

                "unreachable": "#7B7B6B",
                "unreachable.background": "#292D27",
                "unreachable.border": "#7B7B6B",

                // Link styling
                "link_text.hover": "#A6A890",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#C5C5AA",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#DDDDC0",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#5B4C27"
                    },

                    // Strings
                    "string": {
                        "color": "#486C19"
                    },
                    "string.escape": {
                        "color": "#E4E588"
                    },
                    "string.regex": {
                        "color": "#E4E588"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#596C62"
                    },
                    "constant": {
                        "color": "#596C62"
                    },
                    "boolean": {
                        "color": "#86AE21"
                    },

                    // Functions
                    "function": {
                        "color": "#9C9E84"
                    },
                    "constructor": {
                        "color": "#9C9E84"
                    },

                    // Types
                    "type": {
                        "color": "#86AE21"
                    },
                    "enum": {
                        "color": "#86AE21"
                    },

                    // Variables
                    "variable": {
                        "color": "#F6F6D5"
                    },
                    "variable.special": {
                        "color": "#86AE21"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#9C9E84"
                    },
                    "attribute": {
                        "color": "#596C62"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#E4E588"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#DDDDC0"
                    },
                    "punctuation.bracket": {
                        "color": "#F6F6D5"
                    },
                    "punctuation.delimiter": {
                        "color": "#DDDDC0"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#5B4C27"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#9C9E84"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#486C19"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#9C9E84",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#9C9E84",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#E4E588"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#F6F6D5"
                    },
                    "preproc": {
                        "color": "#5B4C27"
                    },
                    "primary": {
                        "color": "#F6F6D5"
                    },
                    "variant": {
                        "color": "#86AE21"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#C5C5AA",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#ACAC95",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#9C9E84",
                        "background": "#9C9E84",
                        "selection": "#424539"
                    },
                    {
                        "cursor": "#486C19",
                        "background": "#486C19",
                        "selection": "#253314"
                    },
                    {
                        "cursor": "#596C62",
                        "background": "#596C62",
                        "selection": "#2B332E"
                    },
                    {
                        "cursor": "#86AE21",
                        "background": "#86AE21",
                        "selection": "#3B4A16"
                    }
                ]
            }
        }
    ]
}
