{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#000016",
                "text": "#FEF8DD",
                "text.muted": "#CBC6B1",
                "text.placeholder": "#B2AE9B",
                "text.disabled": "#989585",
                "text.accent": "#82CFD0",

                // Icon colors - match text hierarchy
                "icon": "#FEF8DD",
                "icon.muted": "#CBC6B1",
                "icon.disabled": "#989585",
                "icon.placeholder": "#B2AE9B",
                "icon.accent": "#82CFD0",

                // Border colors - subtle but visible
                "border": "#666358",
                "border.variant": "#4C4A42",
                "border.focused": "#82CFD0",
                "border.selected": "#82CFD0",
                "border.transparent": "#00000000",
                "border.disabled": "#33322C",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#000016",
                "elevated_surface.background": "#1A1A2D",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#333231",
                "element.active": "#273E45",
                "element.selected": "#20343A",
                "element.disabled": "#0D0D22",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#191918",
                "ghost_element.active": "#333231",
                "ghost_element.selected": "#141F23",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#2E4950",

                // Application frame elements
                "status_bar.background": "#0D0D22",
                "title_bar.background": "#000016",
                "title_bar.inactive_background": "#08081D",
                "toolbar.background": "#000016",

                // Side panels
                "panel.background": "#000016",
                "panel.focused_border": "#82CFD0",

                // Editor panes
                "pane.focused_border": "#82CFD0",
                "pane_group.border": "#666358",

                // Tab bar and tabs
                "tab_bar.background": "#0D0D22",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#000016",

                // Main editor area
                "editor.background": "#000016",
                "editor.foreground": "#FEF8DD",
                "editor.gutter.background": "#000016",
                "editor.subheader.background": "#0D0D22",
                "editor.active_line.background": "#191918",
                "editor.highlighted_line.background": "#322312",
                "editor.line_number": "#989585",
                "editor.active_line_number": "#FEF8DD",
                "editor.invisible": "#7F7C6F",
                "editor.wrap_guide": "#666358",
                "editor.active_wrap_guide": "#989585",
                "editor.indent_guide": "#666358",
                "editor.indent_guide_active": "#989585",
                "editor.document_highlight.read_background": "#3E2C17",
                "editor.document_highlight.write_background": "#3E1E0F",
                "editor.document_highlight.bracket_background": "#20343A",

                // Integrated terminal
                "terminal.background": "#000016",
                "terminal.foreground": "#FEF8DD",
                "terminal.bright_foreground": "#FEF9E0",
                "terminal.dim_foreground": "#CBC6B1",
                "terminal.ansi.background": "#000016",
                "terminal.ansi.black": "#000016",
                "terminal.ansi.red": "#F87626",
                "terminal.ansi.green": "#2CA6E2",
                "terminal.ansi.yellow": "#F8B046",
                "terminal.ansi.blue": "#82CFD0",
                "terminal.ansi.magenta": "#97E798",
                "terminal.ansi.cyan": "#FBEB9E",
                "terminal.ansi.white": "#F5EDC6",
                "terminal.ansi.bright_black": "#ABA68B",
                "terminal.ansi.bright_red": "#F87626",
                "terminal.ansi.bright_green": "#2CA6E2",
                "terminal.ansi.bright_yellow": "#F8B046",
                "terminal.ansi.bright_blue": "#82CFD0",
                "terminal.ansi.bright_magenta": "#97E798",
                "terminal.ansi.bright_cyan": "#FBEB9E",
                "terminal.ansi.bright_white": "#F5EDC6",

                // Search functionality
                "search.match_background": "#634625",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7F7C6F",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#B2AE9B",

                // Status indicators - success, warning, error, info
                "success": "#2CA6E2",
                "success.background": "#0B2A3E",
                "success.border": "#2CA6E2",

                "warning": "#F8B046",
                "warning.background": "#3E2C17",
                "warning.border": "#F8B046",

                "error": "#F87626",
                "error.background": "#3E1E0F",
                "error.border": "#F87626",

                "info": "#82CFD0",
                "info.background": "#20343A",
                "info.border": "#82CFD0",

                "hint": "#CBC6B1",
                "hint.background": "#262525",
                "hint.border": "#CBC6B1",

                // Git status colors
                "created": "#2CA6E2",
                "created.background": "#0B2A3E",
                "created.border": "#2CA6E2",

                "modified": "#F8B046",
                "modified.background": "#3E2C17",
                "modified.border": "#F8B046",

                "deleted": "#F87626",
                "deleted.background": "#3E1E0F",
                "deleted.border": "#F87626",

                "renamed": "#82CFD0",
                "renamed.background": "#20343A",
                "renamed.border": "#82CFD0",

                "conflict": "#97E798",
                "conflict.background": "#263A2C",
                "conflict.border": "#97E798",

                "ignored": "#B2AE9B",
                "ignored.background": "#191918",
                "ignored.border": "#B2AE9B",

                "hidden": "#989585",
                "hidden.background": "transparent",
                "hidden.border": "#989585",

                "predictive": "#B2AE9B",
                "predictive.background": "#191918",
                "predictive.border": "#B2AE9B",

                "unreachable": "#7F7C6F",
                "unreachable.background": "#08081D",
                "unreachable.border": "#7F7C6F",

                // Link styling
                "link_text.hover": "#8FD4D5",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#CBC6B1",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E5DFC7",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#F87626"
                    },

                    // Strings
                    "string": {
                        "color": "#2CA6E2"
                    },
                    "string.escape": {
                        "color": "#FBEB9E"
                    },
                    "string.regex": {
                        "color": "#FBEB9E"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#F8B046"
                    },
                    "constant": {
                        "color": "#F8B046"
                    },
                    "boolean": {
                        "color": "#97E798"
                    },

                    // Functions
                    "function": {
                        "color": "#82CFD0"
                    },
                    "constructor": {
                        "color": "#82CFD0"
                    },

                    // Types
                    "type": {
                        "color": "#97E798"
                    },
                    "enum": {
                        "color": "#97E798"
                    },

                    // Variables
                    "variable": {
                        "color": "#FEF8DD"
                    },
                    "variable.special": {
                        "color": "#97E798"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#82CFD0"
                    },
                    "attribute": {
                        "color": "#F8B046"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#FBEB9E"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E5DFC7"
                    },
                    "punctuation.bracket": {
                        "color": "#FEF8DD"
                    },
                    "punctuation.delimiter": {
                        "color": "#E5DFC7"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#F87626"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#82CFD0"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#2CA6E2"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#82CFD0",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#82CFD0",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#FBEB9E"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FEF8DD"
                    },
                    "preproc": {
                        "color": "#F87626"
                    },
                    "primary": {
                        "color": "#FEF8DD"
                    },
                    "variant": {
                        "color": "#97E798"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#CBC6B1",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#B2AE9B",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#82CFD0",
                        "background": "#82CFD0",
                        "selection": "#2E4950"
                    },
                    {
                        "cursor": "#2CA6E2",
                        "background": "#2CA6E2",
                        "selection": "#0F3A57"
                    },
                    {
                        "cursor": "#F8B046",
                        "background": "#F8B046",
                        "selection": "#573E20"
                    },
                    {
                        "cursor": "#97E798",
                        "background": "#97E798",
                        "selection": "#35513D"
                    }
                ]
            }
        }
    ]
}
