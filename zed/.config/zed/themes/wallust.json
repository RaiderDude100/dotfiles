{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#1D1D1B",
                "text": "#F8F8F8",
                "text.muted": "#C6C6C6",
                "text.placeholder": "#AEAEAE",
                "text.disabled": "#959595",
                "text.accent": "#9A8D6C",

                // Icon colors - match text hierarchy
                "icon": "#F8F8F8",
                "icon.muted": "#C6C6C6",
                "icon.disabled": "#959595",
                "icon.placeholder": "#AEAEAE",
                "icon.accent": "#9A8D6C",

                // Border colors - subtle but visible
                "border": "#636363",
                "border.variant": "#4A4A4A",
                "border.focused": "#9A8D6C",
                "border.selected": "#9A8D6C",
                "border.transparent": "#00000000",
                "border.disabled": "#323232",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#1D1D1B",
                "elevated_surface.background": "#343432",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#383837",
                "element.active": "#373329",
                "element.selected": "#2E2A22",
                "element.disabled": "#282826",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1C1C1C",
                "ghost_element.active": "#383837",
                "ghost_element.selected": "#1C1A14",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#403C30",

                // Application frame elements
                "status_bar.background": "#282826",
                "title_bar.background": "#1D1D1B",
                "title_bar.inactive_background": "#242422",
                "toolbar.background": "#1D1D1B",

                // Side panels
                "panel.background": "#1D1D1B",
                "panel.focused_border": "#9A8D6C",

                // Editor panes
                "pane.focused_border": "#9A8D6C",
                "pane_group.border": "#636363",

                // Tab bar and tabs
                "tab_bar.background": "#282826",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#1D1D1B",

                // Main editor area
                "editor.background": "#1D1D1B",
                "editor.foreground": "#F8F8F8",
                "editor.gutter.background": "#1D1D1B",
                "editor.subheader.background": "#282826",
                "editor.active_line.background": "#1C1C1C",
                "editor.highlighted_line.background": "#1E2021",
                "editor.line_number": "#959595",
                "editor.active_line_number": "#F8F8F8",
                "editor.invisible": "#7C7C7C",
                "editor.wrap_guide": "#636363",
                "editor.active_wrap_guide": "#959595",
                "editor.indent_guide": "#636363",
                "editor.indent_guide_active": "#959595",
                "editor.document_highlight.read_background": "#262829",
                "editor.document_highlight.write_background": "#1F2019",
                "editor.document_highlight.bracket_background": "#2E2A22",

                // Integrated terminal
                "terminal.background": "#1D1D1B",
                "terminal.foreground": "#F8F8F8",
                "terminal.bright_foreground": "#F9F9F9",
                "terminal.dim_foreground": "#C6C6C6",
                "terminal.ansi.background": "#1D1D1B",
                "terminal.ansi.black": "#434341",
                "terminal.ansi.red": "#5E6447",
                "terminal.ansi.green": "#7F6250",
                "terminal.ansi.yellow": "#7C8188",
                "terminal.ansi.blue": "#9A8D6C",
                "terminal.ansi.magenta": "#E9BF9A",
                "terminal.ansi.cyan": "#EBEBEB",
                "terminal.ansi.white": "#EDEDED",
                "terminal.ansi.bright_black": "#A6A6A6",
                "terminal.ansi.bright_red": "#5E6447",
                "terminal.ansi.bright_green": "#7F6250",
                "terminal.ansi.bright_yellow": "#7C8188",
                "terminal.ansi.bright_blue": "#9A8D6C",
                "terminal.ansi.bright_magenta": "#E9BF9A",
                "terminal.ansi.bright_cyan": "#EBEBEB",
                "terminal.ansi.bright_white": "#EDEDED",

                // Search functionality
                "search.match_background": "#3D3F42",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7C7C7C",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#AEAEAE",

                // Status indicators - success, warning, error, info
                "success": "#7F6250",
                "success.background": "#27201B",
                "success.border": "#7F6250",

                "warning": "#7C8188",
                "warning.background": "#262829",
                "warning.border": "#7C8188",

                "error": "#5E6447",
                "error.background": "#1F2019",
                "error.border": "#5E6447",

                "info": "#9A8D6C",
                "info.background": "#2E2A22",
                "info.border": "#9A8D6C",

                "hint": "#C6C6C6",
                "hint.background": "#2A2A29",
                "hint.border": "#C6C6C6",

                // Git status colors
                "created": "#7F6250",
                "created.background": "#27201B",
                "created.border": "#7F6250",

                "modified": "#7C8188",
                "modified.background": "#262829",
                "modified.border": "#7C8188",

                "deleted": "#5E6447",
                "deleted.background": "#1F2019",
                "deleted.border": "#5E6447",

                "renamed": "#9A8D6C",
                "renamed.background": "#2E2A22",
                "renamed.border": "#9A8D6C",

                "conflict": "#E9BF9A",
                "conflict.background": "#42372D",
                "conflict.border": "#E9BF9A",

                "ignored": "#AEAEAE",
                "ignored.background": "#1C1C1C",
                "ignored.border": "#AEAEAE",

                "hidden": "#959595",
                "hidden.background": "transparent",
                "hidden.border": "#959595",

                "predictive": "#AEAEAE",
                "predictive.background": "#1C1C1C",
                "predictive.border": "#AEAEAE",

                "unreachable": "#7C7C7C",
                "unreachable.background": "#242422",
                "unreachable.border": "#7C7C7C",

                // Link styling
                "link_text.hover": "#A4987B",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#C6C6C6",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#DFDFDF",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#5E6447"
                    },

                    // Strings
                    "string": {
                        "color": "#7F6250"
                    },
                    "string.escape": {
                        "color": "#EBEBEB"
                    },
                    "string.regex": {
                        "color": "#EBEBEB"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#7C8188"
                    },
                    "constant": {
                        "color": "#7C8188"
                    },
                    "boolean": {
                        "color": "#E9BF9A"
                    },

                    // Functions
                    "function": {
                        "color": "#9A8D6C"
                    },
                    "constructor": {
                        "color": "#9A8D6C"
                    },

                    // Types
                    "type": {
                        "color": "#E9BF9A"
                    },
                    "enum": {
                        "color": "#E9BF9A"
                    },

                    // Variables
                    "variable": {
                        "color": "#F8F8F8"
                    },
                    "variable.special": {
                        "color": "#E9BF9A"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#9A8D6C"
                    },
                    "attribute": {
                        "color": "#7C8188"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#EBEBEB"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#DFDFDF"
                    },
                    "punctuation.bracket": {
                        "color": "#F8F8F8"
                    },
                    "punctuation.delimiter": {
                        "color": "#DFDFDF"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#5E6447"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#9A8D6C"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#7F6250"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#9A8D6C",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#9A8D6C",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#EBEBEB"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#F8F8F8"
                    },
                    "preproc": {
                        "color": "#5E6447"
                    },
                    "primary": {
                        "color": "#F8F8F8"
                    },
                    "variant": {
                        "color": "#E9BF9A"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#C6C6C6",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#AEAEAE",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#9A8D6C",
                        "background": "#9A8D6C",
                        "selection": "#403C30"
                    },
                    {
                        "cursor": "#7F6250",
                        "background": "#7F6250",
                        "selection": "#372D26"
                    },
                    {
                        "cursor": "#7C8188",
                        "background": "#7C8188",
                        "selection": "#353739"
                    },
                    {
                        "cursor": "#E9BF9A",
                        "background": "#E9BF9A",
                        "selection": "#5C4D3F"
                    }
                ]
            }
        }
    ]
}
