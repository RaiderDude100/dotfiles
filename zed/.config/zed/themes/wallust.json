{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#11100F",
                "text": "#FAF5FB",
                "text.muted": "#C8C4C9",
                "text.placeholder": "#AFACB0",
                "text.disabled": "#969397",
                "text.accent": "#D87C44",

                // Icon colors - match text hierarchy
                "icon": "#FAF5FB",
                "icon.muted": "#C8C4C9",
                "icon.disabled": "#969397",
                "icon.placeholder": "#AFACB0",
                "icon.accent": "#D87C44",

                // Border colors - subtle but visible
                "border": "#646264",
                "border.variant": "#4B4A4B",
                "border.focused": "#D87C44",
                "border.selected": "#D87C44",
                "border.transparent": "#00000000",
                "border.disabled": "#323132",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#11100F",
                "elevated_surface.background": "#292827",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#363435",
                "element.active": "#462A19",
                "element.selected": "#3B2315",
                "element.disabled": "#1D1C1B",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1B1A1B",
                "ghost_element.active": "#363435",
                "ghost_element.selected": "#23150D",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#52311D",

                // Application frame elements
                "status_bar.background": "#1D1C1B",
                "title_bar.background": "#11100F",
                "title_bar.inactive_background": "#181716",
                "toolbar.background": "#11100F",

                // Side panels
                "panel.background": "#11100F",
                "panel.focused_border": "#D87C44",

                // Editor panes
                "pane.focused_border": "#D87C44",
                "pane_group.border": "#646264",

                // Tab bar and tabs
                "tab_bar.background": "#1D1C1B",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#11100F",

                // Main editor area
                "editor.background": "#11100F",
                "editor.foreground": "#FAF5FB",
                "editor.gutter.background": "#11100F",
                "editor.subheader.background": "#1D1C1B",
                "editor.active_line.background": "#1B1A1B",
                "editor.highlighted_line.background": "#211C1A",
                "editor.line_number": "#969397",
                "editor.active_line_number": "#FAF5FB",
                "editor.invisible": "#7D7B7E",
                "editor.wrap_guide": "#646264",
                "editor.active_wrap_guide": "#969397",
                "editor.indent_guide": "#646264",
                "editor.indent_guide_active": "#969397",
                "editor.document_highlight.read_background": "#2A2220",
                "editor.document_highlight.write_background": "#191414",
                "editor.document_highlight.bracket_background": "#3B2315",

                // Integrated terminal
                "terminal.background": "#11100F",
                "terminal.foreground": "#FAF5FB",
                "terminal.bright_foreground": "#FBF6FB",
                "terminal.dim_foreground": "#C8C4C9",
                "terminal.ansi.background": "#11100F",
                "terminal.ansi.black": "#393938",
                "terminal.ansi.red": "#544240",
                "terminal.ansi.green": "#8C4E29",
                "terminal.ansi.yellow": "#957A71",
                "terminal.ansi.blue": "#D87C44",
                "terminal.ansi.magenta": "#D0B5A4",
                "terminal.ansi.cyan": "#F1E2F4",
                "terminal.ansi.white": "#F0E8F1",
                "terminal.ansi.bright_black": "#A8A2A9",
                "terminal.ansi.bright_red": "#544240",
                "terminal.ansi.bright_green": "#8C4E29",
                "terminal.ansi.bright_yellow": "#957A71",
                "terminal.ansi.bright_blue": "#D87C44",
                "terminal.ansi.bright_magenta": "#D0B5A4",
                "terminal.ansi.bright_cyan": "#F1E2F4",
                "terminal.ansi.bright_white": "#F0E8F1",

                // Search functionality
                "search.match_background": "#423733",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7D7B7E",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#AFACB0",

                // Status indicators - success, warning, error, info
                "success": "#8C4E29",
                "success.background": "#27180E",
                "success.border": "#8C4E29",

                "warning": "#957A71",
                "warning.background": "#2A2220",
                "warning.border": "#957A71",

                "error": "#544240",
                "error.background": "#191414",
                "error.border": "#544240",

                "info": "#D87C44",
                "info.background": "#3B2315",
                "info.border": "#D87C44",

                "hint": "#C8C4C9",
                "hint.background": "#282728",
                "hint.border": "#C8C4C9",

                // Git status colors
                "created": "#8C4E29",
                "created.background": "#27180E",
                "created.border": "#8C4E29",

                "modified": "#957A71",
                "modified.background": "#2A2220",
                "modified.border": "#957A71",

                "deleted": "#544240",
                "deleted.background": "#191414",
                "deleted.border": "#544240",

                "renamed": "#D87C44",
                "renamed.background": "#3B2315",
                "renamed.border": "#D87C44",

                "conflict": "#D0B5A4",
                "conflict.background": "#39312D",
                "conflict.border": "#D0B5A4",

                "ignored": "#AFACB0",
                "ignored.background": "#1B1A1B",
                "ignored.border": "#AFACB0",

                "hidden": "#969397",
                "hidden.background": "transparent",
                "hidden.border": "#969397",

                "predictive": "#AFACB0",
                "predictive.background": "#1B1A1B",
                "predictive.border": "#AFACB0",

                "unreachable": "#7D7B7E",
                "unreachable.background": "#181716",
                "unreachable.border": "#7D7B7E",

                // Link styling
                "link_text.hover": "#DC8957",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#C8C4C9",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E1DDE2",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#544240"
                    },

                    // Strings
                    "string": {
                        "color": "#8C4E29"
                    },
                    "string.escape": {
                        "color": "#F1E2F4"
                    },
                    "string.regex": {
                        "color": "#F1E2F4"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#957A71"
                    },
                    "constant": {
                        "color": "#957A71"
                    },
                    "boolean": {
                        "color": "#D0B5A4"
                    },

                    // Functions
                    "function": {
                        "color": "#D87C44"
                    },
                    "constructor": {
                        "color": "#D87C44"
                    },

                    // Types
                    "type": {
                        "color": "#D0B5A4"
                    },
                    "enum": {
                        "color": "#D0B5A4"
                    },

                    // Variables
                    "variable": {
                        "color": "#FAF5FB"
                    },
                    "variable.special": {
                        "color": "#D0B5A4"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#D87C44"
                    },
                    "attribute": {
                        "color": "#957A71"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#F1E2F4"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E1DDE2"
                    },
                    "punctuation.bracket": {
                        "color": "#FAF5FB"
                    },
                    "punctuation.delimiter": {
                        "color": "#E1DDE2"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#544240"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#D87C44"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#8C4E29"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#D87C44",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#D87C44",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#F1E2F4"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FAF5FB"
                    },
                    "preproc": {
                        "color": "#544240"
                    },
                    "primary": {
                        "color": "#FAF5FB"
                    },
                    "variant": {
                        "color": "#D0B5A4"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#C8C4C9",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#AFACB0",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#D87C44",
                        "background": "#D87C44",
                        "selection": "#52311D"
                    },
                    {
                        "cursor": "#8C4E29",
                        "background": "#8C4E29",
                        "selection": "#372114"
                    },
                    {
                        "cursor": "#957A71",
                        "background": "#957A71",
                        "selection": "#3A302D"
                    },
                    {
                        "cursor": "#D0B5A4",
                        "background": "#D0B5A4",
                        "selection": "#4F453F"
                    }
                ]
            }
        }
    ]
}
