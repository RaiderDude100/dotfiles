{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#000200",
                "text": "#E0EFB2",
                "text.muted": "#B3BF8E",
                "text.placeholder": "#9DA77D",
                "text.disabled": "#868F6B",
                "text.accent": "#97B99C",

                // Icon colors - match text hierarchy
                "icon": "#E0EFB2",
                "icon.muted": "#B3BF8E",
                "icon.disabled": "#868F6B",
                "icon.placeholder": "#9DA77D",
                "icon.accent": "#97B99C",

                // Border colors - subtle but visible
                "border": "#5A6047",
                "border.variant": "#434835",
                "border.focused": "#97B99C",
                "border.selected": "#97B99C",
                "border.transparent": "#00000000",
                "border.disabled": "#2D3024",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#000200",
                "elevated_surface.background": "#1A1B1A",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#2D3024",
                "element.active": "#2E382F",
                "element.selected": "#262F27",
                "element.disabled": "#0D0F0D",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#161812",
                "ghost_element.active": "#2D3024",
                "ghost_element.selected": "#171C17",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#354237",

                // Application frame elements
                "status_bar.background": "#0D0F0D",
                "title_bar.background": "#000200",
                "title_bar.inactive_background": "#080A08",
                "toolbar.background": "#000200",

                // Side panels
                "panel.background": "#000200",
                "panel.focused_border": "#97B99C",

                // Editor panes
                "pane.focused_border": "#97B99C",
                "pane_group.border": "#5A6047",

                // Tab bar and tabs
                "tab_bar.background": "#0D0F0D",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#000200",

                // Main editor area
                "editor.background": "#000200",
                "editor.foreground": "#E0EFB2",
                "editor.gutter.background": "#000200",
                "editor.subheader.background": "#0D0F0D",
                "editor.active_line.background": "#161812",
                "editor.highlighted_line.background": "#171E0C",
                "editor.line_number": "#868F6B",
                "editor.active_line_number": "#E0EFB2",
                "editor.invisible": "#707859",
                "editor.wrap_guide": "#5A6047",
                "editor.active_wrap_guide": "#868F6B",
                "editor.indent_guide": "#5A6047",
                "editor.indent_guide_active": "#868F6B",
                "editor.document_highlight.read_background": "#1D2510",
                "editor.document_highlight.write_background": "#1F1F26",
                "editor.document_highlight.bracket_background": "#262F27",

                // Integrated terminal
                "terminal.background": "#000200",
                "terminal.foreground": "#E0EFB2",
                "terminal.bright_foreground": "#E3F1BA",
                "terminal.dim_foreground": "#B3BF8E",
                "terminal.ansi.background": "#000200",
                "terminal.ansi.black": "#000200",
                "terminal.ansi.red": "#797798",
                "terminal.ansi.green": "#407BEF",
                "terminal.ansi.yellow": "#73933E",
                "terminal.ansi.blue": "#97B99C",
                "terminal.ansi.magenta": "#9EB6F3",
                "terminal.ansi.cyan": "#A5D124",
                "terminal.ansi.white": "#CAE089",
                "terminal.ansi.bright_black": "#8D9C60",
                "terminal.ansi.bright_red": "#797798",
                "terminal.ansi.bright_green": "#407BEF",
                "terminal.ansi.bright_yellow": "#73933E",
                "terminal.ansi.bright_blue": "#97B99C",
                "terminal.ansi.bright_magenta": "#9EB6F3",
                "terminal.ansi.bright_cyan": "#A5D124",
                "terminal.ansi.bright_white": "#CAE089",

                // Search functionality
                "search.match_background": "#2E3B19",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#707859",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#9DA77D",

                // Status indicators - success, warning, error, info
                "success": "#407BEF",
                "success.background": "#10203C",
                "success.border": "#407BEF",

                "warning": "#73933E",
                "warning.background": "#1D2510",
                "warning.border": "#73933E",

                "error": "#797798",
                "error.background": "#1F1F26",
                "error.border": "#797798",

                "info": "#97B99C",
                "info.background": "#262F27",
                "info.border": "#97B99C",

                "hint": "#B3BF8E",
                "hint.background": "#22241B",
                "hint.border": "#B3BF8E",

                // Git status colors
                "created": "#407BEF",
                "created.background": "#10203C",
                "created.border": "#407BEF",

                "modified": "#73933E",
                "modified.background": "#1D2510",
                "modified.border": "#73933E",

                "deleted": "#797798",
                "deleted.background": "#1F1F26",
                "deleted.border": "#797798",

                "renamed": "#97B99C",
                "renamed.background": "#262F27",
                "renamed.border": "#97B99C",

                "conflict": "#9EB6F3",
                "conflict.background": "#282E3D",
                "conflict.border": "#9EB6F3",

                "ignored": "#9DA77D",
                "ignored.background": "#161812",
                "ignored.border": "#9DA77D",

                "hidden": "#868F6B",
                "hidden.background": "transparent",
                "hidden.border": "#868F6B",

                "predictive": "#9DA77D",
                "predictive.background": "#161812",
                "predictive.border": "#9DA77D",

                "unreachable": "#707859",
                "unreachable.background": "#080A08",
                "unreachable.border": "#707859",

                // Link styling
                "link_text.hover": "#A1C0A6",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#B3BF8E",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#CAD7A0",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#797798"
                    },

                    // Strings
                    "string": {
                        "color": "#407BEF"
                    },
                    "string.escape": {
                        "color": "#A5D124"
                    },
                    "string.regex": {
                        "color": "#A5D124"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#73933E"
                    },
                    "constant": {
                        "color": "#73933E"
                    },
                    "boolean": {
                        "color": "#9EB6F3"
                    },

                    // Functions
                    "function": {
                        "color": "#97B99C"
                    },
                    "constructor": {
                        "color": "#97B99C"
                    },

                    // Types
                    "type": {
                        "color": "#9EB6F3"
                    },
                    "enum": {
                        "color": "#9EB6F3"
                    },

                    // Variables
                    "variable": {
                        "color": "#E0EFB2"
                    },
                    "variable.special": {
                        "color": "#9EB6F3"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#97B99C"
                    },
                    "attribute": {
                        "color": "#73933E"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#A5D124"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#CAD7A0"
                    },
                    "punctuation.bracket": {
                        "color": "#E0EFB2"
                    },
                    "punctuation.delimiter": {
                        "color": "#CAD7A0"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#797798"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#97B99C"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#407BEF"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#97B99C",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#97B99C",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#A5D124"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#E0EFB2"
                    },
                    "preproc": {
                        "color": "#797798"
                    },
                    "primary": {
                        "color": "#E0EFB2"
                    },
                    "variant": {
                        "color": "#9EB6F3"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#B3BF8E",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#9DA77D",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#97B99C",
                        "background": "#97B99C",
                        "selection": "#354237"
                    },
                    {
                        "cursor": "#407BEF",
                        "background": "#407BEF",
                        "selection": "#162C54"
                    },
                    {
                        "cursor": "#73933E",
                        "background": "#73933E",
                        "selection": "#293416"
                    },
                    {
                        "cursor": "#9EB6F3",
                        "background": "#9EB6F3",
                        "selection": "#374055"
                    }
                ]
            }
        }
    ]
}
