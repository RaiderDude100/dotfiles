{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#252A28",
                "text": "#F3EBF9",
                "text.muted": "#C2BCC7",
                "text.placeholder": "#AAA5AE",
                "text.disabled": "#928D95",
                "text.accent": "#976782",

                // Icon colors - match text hierarchy
                "icon": "#F3EBF9",
                "icon.muted": "#C2BCC7",
                "icon.disabled": "#928D95",
                "icon.placeholder": "#AAA5AE",
                "icon.accent": "#976782",

                // Border colors - subtle but visible
                "border": "#615E64",
                "border.variant": "#49464B",
                "border.focused": "#976782",
                "border.selected": "#976782",
                "border.transparent": "#00000000",
                "border.disabled": "#312F32",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#252A28",
                "elevated_surface.background": "#3B3F3E",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#38383A",
                "element.active": "#382B33",
                "element.selected": "#2F242A",
                "element.disabled": "#303533",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1C1C1D",
                "ghost_element.active": "#38383A",
                "ghost_element.selected": "#1C161A",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#42323C",

                // Application frame elements
                "status_bar.background": "#303533",
                "title_bar.background": "#252A28",
                "title_bar.inactive_background": "#2C302E",
                "toolbar.background": "#252A28",

                // Side panels
                "panel.background": "#252A28",
                "panel.focused_border": "#976782",

                // Editor panes
                "pane.focused_border": "#976782",
                "pane_group.border": "#615E64",

                // Tab bar and tabs
                "tab_bar.background": "#303533",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#252A28",

                // Main editor area
                "editor.background": "#252A28",
                "editor.foreground": "#F3EBF9",
                "editor.gutter.background": "#252A28",
                "editor.subheader.background": "#303533",
                "editor.active_line.background": "#1C1C1D",
                "editor.highlighted_line.background": "#1A1C26",
                "editor.line_number": "#928D95",
                "editor.active_line_number": "#F3EBF9",
                "editor.invisible": "#7A767D",
                "editor.wrap_guide": "#615E64",
                "editor.active_wrap_guide": "#928D95",
                "editor.indent_guide": "#615E64",
                "editor.indent_guide_active": "#928D95",
                "editor.document_highlight.read_background": "#202330",
                "editor.document_highlight.write_background": "#16151F",
                "editor.document_highlight.bracket_background": "#2F242A",

                // Integrated terminal
                "terminal.background": "#252A28",
                "terminal.foreground": "#F3EBF9",
                "terminal.bright_foreground": "#F4EDFA",
                "terminal.dim_foreground": "#C2BCC7",
                "terminal.ansi.background": "#252A28",
                "terminal.ansi.black": "#4A4F4D",
                "terminal.ansi.red": "#302A52",
                "terminal.ansi.green": "#492D2B",
                "terminal.ansi.yellow": "#5C6199",
                "terminal.ansi.blue": "#976782",
                "terminal.ansi.magenta": "#928FC7",
                "terminal.ansi.cyan": "#DEC7ED",
                "terminal.ansi.white": "#E6DBEE",
                "terminal.ansi.bright_black": "#A199A6",
                "terminal.ansi.bright_red": "#302A52",
                "terminal.ansi.bright_green": "#492D2B",
                "terminal.ansi.bright_yellow": "#5C6199",
                "terminal.ansi.bright_blue": "#976782",
                "terminal.ansi.bright_magenta": "#928FC7",
                "terminal.ansi.bright_cyan": "#DEC7ED",
                "terminal.ansi.bright_white": "#E6DBEE",

                // Search functionality
                "search.match_background": "#33384D",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7A767D",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#AAA5AE",

                // Status indicators - success, warning, error, info
                "success": "#492D2B",
                "success.background": "#1C1615",
                "success.border": "#492D2B",

                "warning": "#5C6199",
                "warning.background": "#202330",
                "warning.border": "#5C6199",

                "error": "#302A52",
                "error.background": "#16151F",
                "error.border": "#302A52",

                "info": "#976782",
                "info.background": "#2F242A",
                "info.border": "#976782",

                "hint": "#C2BCC7",
                "hint.background": "#2A2A2C",
                "hint.border": "#C2BCC7",

                // Git status colors
                "created": "#492D2B",
                "created.background": "#1C1615",
                "created.border": "#492D2B",

                "modified": "#5C6199",
                "modified.background": "#202330",
                "modified.border": "#5C6199",

                "deleted": "#302A52",
                "deleted.background": "#16151F",
                "deleted.border": "#302A52",

                "renamed": "#976782",
                "renamed.background": "#2F242A",
                "renamed.border": "#976782",

                "conflict": "#928FC7",
                "conflict.background": "#2E2E3C",
                "conflict.border": "#928FC7",

                "ignored": "#AAA5AE",
                "ignored.background": "#1C1C1D",
                "ignored.border": "#AAA5AE",

                "hidden": "#928D95",
                "hidden.background": "transparent",
                "hidden.border": "#928D95",

                "predictive": "#AAA5AE",
                "predictive.background": "#1C1C1D",
                "predictive.border": "#AAA5AE",

                "unreachable": "#7A767D",
                "unreachable.background": "#2C302E",
                "unreachable.border": "#7A767D",

                // Link styling
                "link_text.hover": "#A1768F",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#C2BCC7",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#DBD4E0",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#302A52"
                    },

                    // Strings
                    "string": {
                        "color": "#492D2B"
                    },
                    "string.escape": {
                        "color": "#DEC7ED"
                    },
                    "string.regex": {
                        "color": "#DEC7ED"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#5C6199"
                    },
                    "constant": {
                        "color": "#5C6199"
                    },
                    "boolean": {
                        "color": "#928FC7"
                    },

                    // Functions
                    "function": {
                        "color": "#976782"
                    },
                    "constructor": {
                        "color": "#976782"
                    },

                    // Types
                    "type": {
                        "color": "#928FC7"
                    },
                    "enum": {
                        "color": "#928FC7"
                    },

                    // Variables
                    "variable": {
                        "color": "#F3EBF9"
                    },
                    "variable.special": {
                        "color": "#928FC7"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#976782"
                    },
                    "attribute": {
                        "color": "#5C6199"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#DEC7ED"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#DBD4E0"
                    },
                    "punctuation.bracket": {
                        "color": "#F3EBF9"
                    },
                    "punctuation.delimiter": {
                        "color": "#DBD4E0"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#302A52"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#976782"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#492D2B"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#976782",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#976782",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#DEC7ED"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#F3EBF9"
                    },
                    "preproc": {
                        "color": "#302A52"
                    },
                    "primary": {
                        "color": "#F3EBF9"
                    },
                    "variant": {
                        "color": "#928FC7"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#C2BCC7",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#AAA5AE",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#976782",
                        "background": "#976782",
                        "selection": "#42323C"
                    },
                    {
                        "cursor": "#492D2B",
                        "background": "#492D2B",
                        "selection": "#261F1D"
                    },
                    {
                        "cursor": "#5C6199",
                        "background": "#5C6199",
                        "selection": "#2D3143"
                    },
                    {
                        "cursor": "#928FC7",
                        "background": "#928FC7",
                        "selection": "#404054"
                    }
                ]
            }
        }
    ]
}
