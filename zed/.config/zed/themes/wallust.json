{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#252525",
                "text": "#EEF0EE",
                "text.muted": "#BEC0BE",
                "text.placeholder": "#A7A8A7",
                "text.disabled": "#8F908F",
                "text.accent": "#8C908C",

                // Icon colors - match text hierarchy
                "icon": "#EEF0EE",
                "icon.muted": "#BEC0BE",
                "icon.disabled": "#8F908F",
                "icon.placeholder": "#A7A8A7",
                "icon.accent": "#8C908C",

                // Border colors - subtle but visible
                "border": "#5F605F",
                "border.variant": "#474847",
                "border.focused": "#8C908C",
                "border.selected": "#8C908C",
                "border.transparent": "#00000000",
                "border.disabled": "#303030",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#252525",
                "elevated_surface.background": "#3B3B3B",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#373837",
                "element.active": "#353635",
                "element.selected": "#2C2D2C",
                "element.disabled": "#303030",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1C1C1C",
                "ghost_element.active": "#373837",
                "ghost_element.selected": "#1A1B1A",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#3E3F3E",

                // Application frame elements
                "status_bar.background": "#303030",
                "title_bar.background": "#252525",
                "title_bar.inactive_background": "#2C2C2C",
                "toolbar.background": "#252525",

                // Side panels
                "panel.background": "#252525",
                "panel.focused_border": "#8C908C",

                // Editor panes
                "pane.focused_border": "#8C908C",
                "pane_group.border": "#5F605F",

                // Tab bar and tabs
                "tab_bar.background": "#303030",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#252525",

                // Main editor area
                "editor.background": "#252525",
                "editor.foreground": "#EEF0EE",
                "editor.gutter.background": "#252525",
                "editor.subheader.background": "#303030",
                "editor.active_line.background": "#1C1C1C",
                "editor.highlighted_line.background": "#1A1B1B",
                "editor.line_number": "#8F908F",
                "editor.active_line_number": "#EEF0EE",
                "editor.invisible": "#777877",
                "editor.wrap_guide": "#5F605F",
                "editor.active_wrap_guide": "#8F908F",
                "editor.indent_guide": "#5F605F",
                "editor.indent_guide_active": "#8F908F",
                "editor.document_highlight.read_background": "#212222",
                "editor.document_highlight.write_background": "#202121",
                "editor.document_highlight.bracket_background": "#2C2D2C",

                // Integrated terminal
                "terminal.background": "#252525",
                "terminal.foreground": "#EEF0EE",
                "terminal.bright_foreground": "#F0F2F0",
                "terminal.dim_foreground": "#BEC0BE",
                "terminal.ansi.background": "#252525",
                "terminal.ansi.black": "#4B4B4B",
                "terminal.ansi.red": "#5D5E5E",
                "terminal.ansi.green": "#5F612D",
                "terminal.ansi.yellow": "#606161",
                "terminal.ansi.blue": "#8C908C",
                "terminal.ansi.magenta": "#8C908C",
                "terminal.ansi.cyan": "#CED3CF",
                "terminal.ansi.white": "#DEE1DF",
                "terminal.ansi.bright_black": "#9B9D9C",
                "terminal.ansi.bright_red": "#5D5E5E",
                "terminal.ansi.bright_green": "#5F612D",
                "terminal.ansi.bright_yellow": "#606161",
                "terminal.ansi.bright_blue": "#8C908C",
                "terminal.ansi.bright_magenta": "#8C908C",
                "terminal.ansi.bright_cyan": "#CED3CF",
                "terminal.ansi.bright_white": "#DEE1DF",

                // Search functionality
                "search.match_background": "#353636",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#777877",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#A7A8A7",

                // Status indicators - success, warning, error, info
                "success": "#5F612D",
                "success.background": "#212214",
                "success.border": "#5F612D",

                "warning": "#606161",
                "warning.background": "#212222",
                "warning.border": "#606161",

                "error": "#5D5E5E",
                "error.background": "#202121",
                "error.border": "#5D5E5E",

                "info": "#8C908C",
                "info.background": "#2C2D2C",
                "info.border": "#8C908C",

                "hint": "#BEC0BE",
                "hint.background": "#292A29",
                "hint.border": "#BEC0BE",

                // Git status colors
                "created": "#5F612D",
                "created.background": "#212214",
                "created.border": "#5F612D",

                "modified": "#606161",
                "modified.background": "#212222",
                "modified.border": "#606161",

                "deleted": "#5D5E5E",
                "deleted.background": "#202121",
                "deleted.border": "#5D5E5E",

                "renamed": "#8C908C",
                "renamed.background": "#2C2D2C",
                "renamed.border": "#8C908C",

                "conflict": "#8C908C",
                "conflict.background": "#2C2D2C",
                "conflict.border": "#8C908C",

                "ignored": "#A7A8A7",
                "ignored.background": "#1C1C1C",
                "ignored.border": "#A7A8A7",

                "hidden": "#8F908F",
                "hidden.background": "transparent",
                "hidden.border": "#8F908F",

                "predictive": "#A7A8A7",
                "predictive.background": "#1C1C1C",
                "predictive.border": "#A7A8A7",

                "unreachable": "#777877",
                "unreachable.background": "#2C2C2C",
                "unreachable.border": "#777877",

                // Link styling
                "link_text.hover": "#989B98",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#BEC0BE",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#D6D8D6",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#5D5E5E"
                    },

                    // Strings
                    "string": {
                        "color": "#5F612D"
                    },
                    "string.escape": {
                        "color": "#CED3CF"
                    },
                    "string.regex": {
                        "color": "#CED3CF"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#606161"
                    },
                    "constant": {
                        "color": "#606161"
                    },
                    "boolean": {
                        "color": "#8C908C"
                    },

                    // Functions
                    "function": {
                        "color": "#8C908C"
                    },
                    "constructor": {
                        "color": "#8C908C"
                    },

                    // Types
                    "type": {
                        "color": "#8C908C"
                    },
                    "enum": {
                        "color": "#8C908C"
                    },

                    // Variables
                    "variable": {
                        "color": "#EEF0EE"
                    },
                    "variable.special": {
                        "color": "#8C908C"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#8C908C"
                    },
                    "attribute": {
                        "color": "#606161"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#CED3CF"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#D6D8D6"
                    },
                    "punctuation.bracket": {
                        "color": "#EEF0EE"
                    },
                    "punctuation.delimiter": {
                        "color": "#D6D8D6"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#5D5E5E"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#8C908C"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#5F612D"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#8C908C",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#8C908C",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#CED3CF"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#EEF0EE"
                    },
                    "preproc": {
                        "color": "#5D5E5E"
                    },
                    "primary": {
                        "color": "#EEF0EE"
                    },
                    "variant": {
                        "color": "#8C908C"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#BEC0BE",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#A7A8A7",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#8C908C",
                        "background": "#8C908C",
                        "selection": "#3E3F3E"
                    },
                    {
                        "cursor": "#5F612D",
                        "background": "#5F612D",
                        "selection": "#2E2F1D"
                    },
                    {
                        "cursor": "#606161",
                        "background": "#606161",
                        "selection": "#2E2F2F"
                    },
                    {
                        "cursor": "#8C908C",
                        "background": "#8C908C",
                        "selection": "#3E3F3E"
                    }
                ]
            }
        }
    ]
}
