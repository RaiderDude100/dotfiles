{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#0F100D",
                "text": "#F3FDDB",
                "text.muted": "#C2CAAF",
                "text.placeholder": "#AAB199",
                "text.disabled": "#929883",
                "text.accent": "#AFBEC6",

                // Icon colors - match text hierarchy
                "icon": "#F3FDDB",
                "icon.muted": "#C2CAAF",
                "icon.disabled": "#929883",
                "icon.placeholder": "#AAB199",
                "icon.accent": "#AFBEC6",

                // Border colors - subtle but visible
                "border": "#616558",
                "border.variant": "#494C42",
                "border.focused": "#AFBEC6",
                "border.selected": "#AFBEC6",
                "border.transparent": "#00000000",
                "border.disabled": "#31332C",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#0F100D",
                "elevated_surface.background": "#272825",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#34362E",
                "element.active": "#393E40",
                "element.selected": "#303435",
                "element.disabled": "#1B1C19",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1A1B17",
                "ghost_element.active": "#34362E",
                "ghost_element.selected": "#1C1F20",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#42484A",

                // Application frame elements
                "status_bar.background": "#1B1C19",
                "title_bar.background": "#0F100D",
                "title_bar.inactive_background": "#161714",
                "toolbar.background": "#0F100D",

                // Side panels
                "panel.background": "#0F100D",
                "panel.focused_border": "#AFBEC6",

                // Editor panes
                "pane.focused_border": "#AFBEC6",
                "pane_group.border": "#616558",

                // Tab bar and tabs
                "tab_bar.background": "#1B1C19",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#0F100D",

                // Main editor area
                "editor.background": "#0F100D",
                "editor.foreground": "#F3FDDB",
                "editor.gutter.background": "#0F100D",
                "editor.subheader.background": "#1B1C19",
                "editor.active_line.background": "#1A1B17",
                "editor.highlighted_line.background": "#1B2810",
                "editor.line_number": "#929883",
                "editor.active_line_number": "#F3FDDB",
                "editor.invisible": "#7A7F6E",
                "editor.wrap_guide": "#616558",
                "editor.active_wrap_guide": "#929883",
                "editor.indent_guide": "#616558",
                "editor.indent_guide_active": "#929883",
                "editor.document_highlight.read_background": "#223214",
                "editor.document_highlight.write_background": "#212C26",
                "editor.document_highlight.bracket_background": "#303435",

                // Integrated terminal
                "terminal.background": "#0F100D",
                "terminal.foreground": "#F3FDDB",
                "terminal.bright_foreground": "#F4FDDF",
                "terminal.dim_foreground": "#C2CAAF",
                "terminal.ansi.background": "#0F100D",
                "terminal.ansi.black": "#373936",
                "terminal.ansi.red": "#759F8A",
                "terminal.ansi.green": "#A89888",
                "terminal.ansi.yellow": "#79B742",
                "terminal.ansi.blue": "#AFBEC6",
                "terminal.ansi.magenta": "#B7F2DB",
                "terminal.ansi.cyan": "#DCFA99",
                "terminal.ansi.white": "#E5F4C4",
                "terminal.ansi.bright_black": "#A0AB89",
                "terminal.ansi.bright_red": "#759F8A",
                "terminal.ansi.bright_green": "#A89888",
                "terminal.ansi.bright_yellow": "#79B742",
                "terminal.ansi.bright_blue": "#AFBEC6",
                "terminal.ansi.bright_magenta": "#B7F2DB",
                "terminal.ansi.bright_cyan": "#DCFA99",
                "terminal.ansi.bright_white": "#E5F4C4",

                // Search functionality
                "search.match_background": "#365020",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7A7F6E",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#AAB199",

                // Status indicators - success, warning, error, info
                "success": "#A89888",
                "success.background": "#2E2A25",
                "success.border": "#A89888",

                "warning": "#79B742",
                "warning.background": "#223214",
                "warning.border": "#79B742",

                "error": "#759F8A",
                "error.background": "#212C26",
                "error.border": "#759F8A",

                "info": "#AFBEC6",
                "info.background": "#303435",
                "info.border": "#AFBEC6",

                "hint": "#C2CAAF",
                "hint.background": "#272923",
                "hint.border": "#C2CAAF",

                // Git status colors
                "created": "#A89888",
                "created.background": "#2E2A25",
                "created.border": "#A89888",

                "modified": "#79B742",
                "modified.background": "#223214",
                "modified.border": "#79B742",

                "deleted": "#759F8A",
                "deleted.background": "#212C26",
                "deleted.border": "#759F8A",

                "renamed": "#AFBEC6",
                "renamed.background": "#303435",
                "renamed.border": "#AFBEC6",

                "conflict": "#B7F2DB",
                "conflict.background": "#32403A",
                "conflict.border": "#B7F2DB",

                "ignored": "#AAB199",
                "ignored.background": "#1A1B17",
                "ignored.border": "#AAB199",

                "hidden": "#929883",
                "hidden.background": "transparent",
                "hidden.border": "#929883",

                "predictive": "#AAB199",
                "predictive.background": "#1A1B17",
                "predictive.border": "#AAB199",

                "unreachable": "#7A7F6E",
                "unreachable.background": "#161714",
                "unreachable.border": "#7A7F6E",

                // Link styling
                "link_text.hover": "#B7C5CC",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#C2CAAF",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#DBE4C5",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#759F8A"
                    },

                    // Strings
                    "string": {
                        "color": "#A89888"
                    },
                    "string.escape": {
                        "color": "#DCFA99"
                    },
                    "string.regex": {
                        "color": "#DCFA99"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#79B742"
                    },
                    "constant": {
                        "color": "#79B742"
                    },
                    "boolean": {
                        "color": "#B7F2DB"
                    },

                    // Functions
                    "function": {
                        "color": "#AFBEC6"
                    },
                    "constructor": {
                        "color": "#AFBEC6"
                    },

                    // Types
                    "type": {
                        "color": "#B7F2DB"
                    },
                    "enum": {
                        "color": "#B7F2DB"
                    },

                    // Variables
                    "variable": {
                        "color": "#F3FDDB"
                    },
                    "variable.special": {
                        "color": "#B7F2DB"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#AFBEC6"
                    },
                    "attribute": {
                        "color": "#79B742"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#DCFA99"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#DBE4C5"
                    },
                    "punctuation.bracket": {
                        "color": "#F3FDDB"
                    },
                    "punctuation.delimiter": {
                        "color": "#DBE4C5"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#759F8A"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#AFBEC6"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#A89888"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#AFBEC6",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#AFBEC6",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#DCFA99"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#F3FDDB"
                    },
                    "preproc": {
                        "color": "#759F8A"
                    },
                    "primary": {
                        "color": "#F3FDDB"
                    },
                    "variant": {
                        "color": "#B7F2DB"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#C2CAAF",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#AAB199",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#AFBEC6",
                        "background": "#AFBEC6",
                        "selection": "#42484A"
                    },
                    {
                        "cursor": "#A89888",
                        "background": "#A89888",
                        "selection": "#403B34"
                    },
                    {
                        "cursor": "#79B742",
                        "background": "#79B742",
                        "selection": "#30461C"
                    },
                    {
                        "cursor": "#B7F2DB",
                        "background": "#B7F2DB",
                        "selection": "#455A51"
                    }
                ]
            }
        }
    ]
}
