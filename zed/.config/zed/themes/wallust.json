{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#171619",
                "text": "#F4E8F3",
                "text.muted": "#C3BAC2",
                "text.placeholder": "#ABA2AA",
                "text.disabled": "#928B92",
                "text.accent": "#9CADE2",

                // Icon colors - match text hierarchy
                "icon": "#F4E8F3",
                "icon.muted": "#C3BAC2",
                "icon.disabled": "#928B92",
                "icon.placeholder": "#ABA2AA",
                "icon.accent": "#9CADE2",

                // Border colors - subtle but visible
                "border": "#625D61",
                "border.variant": "#494649",
                "border.focused": "#9CADE2",
                "border.selected": "#9CADE2",
                "border.transparent": "#00000000",
                "border.disabled": "#312E31",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#171619",
                "elevated_surface.background": "#2E2D30",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#363336",
                "element.active": "#363B4C",
                "element.selected": "#2D313F",
                "element.disabled": "#232224",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1B191B",
                "ghost_element.active": "#363336",
                "ghost_element.selected": "#1B1D26",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#3F4558",

                // Application frame elements
                "status_bar.background": "#232224",
                "title_bar.background": "#171619",
                "title_bar.inactive_background": "#1E1D20",
                "toolbar.background": "#171619",

                // Side panels
                "panel.background": "#171619",
                "panel.focused_border": "#9CADE2",

                // Editor panes
                "pane.focused_border": "#9CADE2",
                "pane_group.border": "#625D61",

                // Tab bar and tabs
                "tab_bar.background": "#232224",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#171619",

                // Main editor area
                "editor.background": "#171619",
                "editor.foreground": "#F4E8F3",
                "editor.gutter.background": "#171619",
                "editor.subheader.background": "#232224",
                "editor.active_line.background": "#1B191B",
                "editor.highlighted_line.background": "#261D27",
                "editor.line_number": "#928B92",
                "editor.active_line_number": "#F4E8F3",
                "editor.invisible": "#7A747A",
                "editor.wrap_guide": "#625D61",
                "editor.active_wrap_guide": "#928B92",
                "editor.indent_guide": "#625D61",
                "editor.indent_guide_active": "#928B92",
                "editor.document_highlight.read_background": "#302431",
                "editor.document_highlight.write_background": "#1D2332",
                "editor.document_highlight.bracket_background": "#2D313F",

                // Integrated terminal
                "terminal.background": "#171619",
                "terminal.foreground": "#F4E8F3",
                "terminal.bright_foreground": "#F5EAF4",
                "terminal.dim_foreground": "#C3BAC2",
                "terminal.ansi.background": "#171619",
                "terminal.ansi.black": "#3E3D41",
                "terminal.ansi.red": "#5C76B0",
                "terminal.ansi.green": "#ED4767",
                "terminal.ansi.yellow": "#A87BAC",
                "terminal.ansi.blue": "#9CADE2",
                "terminal.ansi.magenta": "#FD9F9A",
                "terminal.ansi.cyan": "#E0BCDD",
                "terminal.ansi.white": "#E7D5E6",
                "terminal.ansi.bright_black": "#A295A1",
                "terminal.ansi.bright_red": "#5C76B0",
                "terminal.ansi.bright_green": "#ED4767",
                "terminal.ansi.bright_yellow": "#A87BAC",
                "terminal.ansi.bright_blue": "#9CADE2",
                "terminal.ansi.bright_magenta": "#FD9F9A",
                "terminal.ansi.bright_cyan": "#E0BCDD",
                "terminal.ansi.bright_white": "#E7D5E6",

                // Search functionality
                "search.match_background": "#4D3A4E",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7A747A",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#ABA2AA",

                // Status indicators - success, warning, error, info
                "success": "#ED4767",
                "success.background": "#411720",
                "success.border": "#ED4767",

                "warning": "#A87BAC",
                "warning.background": "#302431",
                "warning.border": "#A87BAC",

                "error": "#5C76B0",
                "error.background": "#1D2332",
                "error.border": "#5C76B0",

                "info": "#9CADE2",
                "info.background": "#2D313F",
                "info.border": "#9CADE2",

                "hint": "#C3BAC2",
                "hint.background": "#282628",
                "hint.border": "#C3BAC2",

                // Git status colors
                "created": "#ED4767",
                "created.background": "#411720",
                "created.border": "#ED4767",

                "modified": "#A87BAC",
                "modified.background": "#302431",
                "modified.border": "#A87BAC",

                "deleted": "#5C76B0",
                "deleted.background": "#1D2332",
                "deleted.border": "#5C76B0",

                "renamed": "#9CADE2",
                "renamed.background": "#2D313F",
                "renamed.border": "#9CADE2",

                "conflict": "#FD9F9A",
                "conflict.background": "#452D2D",
                "conflict.border": "#FD9F9A",

                "ignored": "#ABA2AA",
                "ignored.background": "#1B191B",
                "ignored.border": "#ABA2AA",

                "hidden": "#928B92",
                "hidden.background": "transparent",
                "hidden.border": "#928B92",

                "predictive": "#ABA2AA",
                "predictive.background": "#1B191B",
                "predictive.border": "#ABA2AA",

                "unreachable": "#7A747A",
                "unreachable.background": "#1E1D20",
                "unreachable.border": "#7A747A",

                // Link styling
                "link_text.hover": "#A6B5E5",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#C3BAC2",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#DCD1DB",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#5C76B0"
                    },

                    // Strings
                    "string": {
                        "color": "#ED4767"
                    },
                    "string.escape": {
                        "color": "#E0BCDD"
                    },
                    "string.regex": {
                        "color": "#E0BCDD"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#A87BAC"
                    },
                    "constant": {
                        "color": "#A87BAC"
                    },
                    "boolean": {
                        "color": "#FD9F9A"
                    },

                    // Functions
                    "function": {
                        "color": "#9CADE2"
                    },
                    "constructor": {
                        "color": "#9CADE2"
                    },

                    // Types
                    "type": {
                        "color": "#FD9F9A"
                    },
                    "enum": {
                        "color": "#FD9F9A"
                    },

                    // Variables
                    "variable": {
                        "color": "#F4E8F3"
                    },
                    "variable.special": {
                        "color": "#FD9F9A"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#9CADE2"
                    },
                    "attribute": {
                        "color": "#A87BAC"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#E0BCDD"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#DCD1DB"
                    },
                    "punctuation.bracket": {
                        "color": "#F4E8F3"
                    },
                    "punctuation.delimiter": {
                        "color": "#DCD1DB"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#5C76B0"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#9CADE2"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#ED4767"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#9CADE2",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#9CADE2",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#E0BCDD"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#F4E8F3"
                    },
                    "preproc": {
                        "color": "#5C76B0"
                    },
                    "primary": {
                        "color": "#F4E8F3"
                    },
                    "variant": {
                        "color": "#FD9F9A"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#C3BAC2",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#ABA2AA",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#9CADE2",
                        "background": "#9CADE2",
                        "selection": "#3F4558"
                    },
                    {
                        "cursor": "#ED4767",
                        "background": "#ED4767",
                        "selection": "#5B202D"
                    },
                    {
                        "cursor": "#A87BAC",
                        "background": "#A87BAC",
                        "selection": "#433245"
                    },
                    {
                        "cursor": "#FD9F9A",
                        "background": "#FD9F9A",
                        "selection": "#613F3F"
                    }
                ]
            }
        }
    ]
}
