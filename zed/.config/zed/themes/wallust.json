{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#1A1517",
                "text": "#FDF7E2",
                "text.muted": "#CAC6B5",
                "text.placeholder": "#B1AD9E",
                "text.disabled": "#989488",
                "text.accent": "#F4AA4E",

                // Icon colors - match text hierarchy
                "icon": "#FDF7E2",
                "icon.muted": "#CAC6B5",
                "icon.disabled": "#989488",
                "icon.placeholder": "#B1AD9E",
                "icon.accent": "#F4AA4E",

                // Border colors - subtle but visible
                "border": "#65635A",
                "border.variant": "#4C4A44",
                "border.focused": "#F4AA4E",
                "border.selected": "#F4AA4E",
                "border.transparent": "#00000000",
                "border.disabled": "#33312D",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#1A1517",
                "elevated_surface.background": "#312C2E",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#383632",
                "element.active": "#513A1E",
                "element.selected": "#443019",
                "element.disabled": "#252123",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1C1B19",
                "ghost_element.active": "#383632",
                "ghost_element.selected": "#291D0F",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#5E4323",

                // Application frame elements
                "status_bar.background": "#252123",
                "title_bar.background": "#1A1517",
                "title_bar.inactive_background": "#211C1E",
                "toolbar.background": "#1A1517",

                // Side panels
                "panel.background": "#1A1517",
                "panel.focused_border": "#F4AA4E",

                // Editor panes
                "pane.focused_border": "#F4AA4E",
                "pane_group.border": "#65635A",

                // Tab bar and tabs
                "tab_bar.background": "#252123",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#1A1517",

                // Main editor area
                "editor.background": "#1A1517",
                "editor.foreground": "#FDF7E2",
                "editor.gutter.background": "#1A1517",
                "editor.subheader.background": "#252123",
                "editor.active_line.background": "#1C1B19",
                "editor.highlighted_line.background": "#242A29",
                "editor.line_number": "#989488",
                "editor.active_line_number": "#FDF7E2",
                "editor.invisible": "#7F7C71",
                "editor.wrap_guide": "#65635A",
                "editor.active_wrap_guide": "#989488",
                "editor.indent_guide": "#65635A",
                "editor.indent_guide_active": "#989488",
                "editor.document_highlight.read_background": "#2D3533",
                "editor.document_highlight.write_background": "#3E2216",
                "editor.document_highlight.bracket_background": "#443019",

                // Integrated terminal
                "terminal.background": "#1A1517",
                "terminal.foreground": "#FDF7E2",
                "terminal.bright_foreground": "#FDF8E5",
                "terminal.dim_foreground": "#CAC6B5",
                "terminal.ansi.background": "#1A1517",
                "terminal.ansi.black": "#423C3E",
                "terminal.ansi.red": "#DD7340",
                "terminal.ansi.green": "#A09179",
                "terminal.ansi.yellow": "#9BBDB6",
                "terminal.ansi.blue": "#F4AA4E",
                "terminal.ansi.magenta": "#F6AEB9",
                "terminal.ansi.cyan": "#FAE7AB",
                "terminal.ansi.white": "#F4EBCD",
                "terminal.ansi.bright_black": "#ABA48F",
                "terminal.ansi.bright_red": "#DD7340",
                "terminal.ansi.bright_green": "#A09179",
                "terminal.ansi.bright_yellow": "#9BBDB6",
                "terminal.ansi.bright_blue": "#F4AA4E",
                "terminal.ansi.bright_magenta": "#F6AEB9",
                "terminal.ansi.bright_cyan": "#FAE7AB",
                "terminal.ansi.bright_white": "#F4EBCD",

                // Search functionality
                "search.match_background": "#485452",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7F7C71",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#B1AD9E",

                // Status indicators - success, warning, error, info
                "success": "#A09179",
                "success.background": "#2E2A24",
                "success.border": "#A09179",

                "warning": "#9BBDB6",
                "warning.background": "#2D3533",
                "warning.border": "#9BBDB6",

                "error": "#DD7340",
                "error.background": "#3E2216",
                "error.border": "#DD7340",

                "info": "#F4AA4E",
                "info.background": "#443019",
                "info.border": "#F4AA4E",

                "hint": "#CAC6B5",
                "hint.background": "#2A2826",
                "hint.border": "#CAC6B5",

                // Git status colors
                "created": "#A09179",
                "created.background": "#2E2A24",
                "created.border": "#A09179",

                "modified": "#9BBDB6",
                "modified.background": "#2D3533",
                "modified.border": "#9BBDB6",

                "deleted": "#DD7340",
                "deleted.background": "#3E2216",
                "deleted.border": "#DD7340",

                "renamed": "#F4AA4E",
                "renamed.background": "#443019",
                "renamed.border": "#F4AA4E",

                "conflict": "#F6AEB9",
                "conflict.background": "#443134",
                "conflict.border": "#F6AEB9",

                "ignored": "#B1AD9E",
                "ignored.background": "#1C1B19",
                "ignored.border": "#B1AD9E",

                "hidden": "#989488",
                "hidden.background": "transparent",
                "hidden.border": "#989488",

                "predictive": "#B1AD9E",
                "predictive.background": "#1C1B19",
                "predictive.border": "#B1AD9E",

                "unreachable": "#7F7C71",
                "unreachable.background": "#211C1E",
                "unreachable.border": "#7F7C71",

                // Link styling
                "link_text.hover": "#F5B360",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#CAC6B5",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E4DECB",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#DD7340"
                    },

                    // Strings
                    "string": {
                        "color": "#A09179"
                    },
                    "string.escape": {
                        "color": "#FAE7AB"
                    },
                    "string.regex": {
                        "color": "#FAE7AB"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#9BBDB6"
                    },
                    "constant": {
                        "color": "#9BBDB6"
                    },
                    "boolean": {
                        "color": "#F6AEB9"
                    },

                    // Functions
                    "function": {
                        "color": "#F4AA4E"
                    },
                    "constructor": {
                        "color": "#F4AA4E"
                    },

                    // Types
                    "type": {
                        "color": "#F6AEB9"
                    },
                    "enum": {
                        "color": "#F6AEB9"
                    },

                    // Variables
                    "variable": {
                        "color": "#FDF7E2"
                    },
                    "variable.special": {
                        "color": "#F6AEB9"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#F4AA4E"
                    },
                    "attribute": {
                        "color": "#9BBDB6"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#FAE7AB"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E4DECB"
                    },
                    "punctuation.bracket": {
                        "color": "#FDF7E2"
                    },
                    "punctuation.delimiter": {
                        "color": "#E4DECB"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#DD7340"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#F4AA4E"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#A09179"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#F4AA4E",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#F4AA4E",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#FAE7AB"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FDF7E2"
                    },
                    "preproc": {
                        "color": "#DD7340"
                    },
                    "primary": {
                        "color": "#FDF7E2"
                    },
                    "variant": {
                        "color": "#F6AEB9"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#CAC6B5",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#B1AD9E",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#F4AA4E",
                        "background": "#F4AA4E",
                        "selection": "#5E4323"
                    },
                    {
                        "cursor": "#A09179",
                        "background": "#A09179",
                        "selection": "#413A32"
                    },
                    {
                        "cursor": "#9BBDB6",
                        "background": "#9BBDB6",
                        "selection": "#3F4A47"
                    },
                    {
                        "cursor": "#F6AEB9",
                        "background": "#F6AEB9",
                        "selection": "#5F4549"
                    }
                ]
            }
        }
    ]
}
