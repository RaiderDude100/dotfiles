{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#171313",
                "text": "#FDFAF1",
                "text.muted": "#CAC8C1",
                "text.placeholder": "#B1AFA9",
                "text.disabled": "#989691",
                "text.accent": "#F7E05C",

                // Icon colors - match text hierarchy
                "icon": "#FDFAF1",
                "icon.muted": "#CAC8C1",
                "icon.disabled": "#989691",
                "icon.placeholder": "#B1AFA9",
                "icon.accent": "#F7E05C",

                // Border colors - subtle but visible
                "border": "#656460",
                "border.variant": "#4C4B48",
                "border.focused": "#F7E05C",
                "border.selected": "#F7E05C",
                "border.transparent": "#00000000",
                "border.disabled": "#333230",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#171313",
                "elevated_surface.background": "#2E2B2B",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#373634",
                "element.active": "#514922",
                "element.selected": "#443D1C",
                "element.disabled": "#231F1F",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1C1B1A",
                "ghost_element.active": "#373634",
                "ghost_element.selected": "#292511",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#5E5527",

                // Application frame elements
                "status_bar.background": "#231F1F",
                "title_bar.background": "#171313",
                "title_bar.inactive_background": "#1E1A1A",
                "toolbar.background": "#171313",

                // Side panels
                "panel.background": "#171313",
                "panel.focused_border": "#F7E05C",

                // Editor panes
                "pane.focused_border": "#F7E05C",
                "pane_group.border": "#656460",

                // Tab bar and tabs
                "tab_bar.background": "#231F1F",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#171313",

                // Main editor area
                "editor.background": "#171313",
                "editor.foreground": "#FDFAF1",
                "editor.gutter.background": "#171313",
                "editor.subheader.background": "#231F1F",
                "editor.active_line.background": "#1C1B1A",
                "editor.highlighted_line.background": "#342A28",
                "editor.line_number": "#989691",
                "editor.active_line_number": "#FDFAF1",
                "editor.invisible": "#7F7D79",
                "editor.wrap_guide": "#656460",
                "editor.active_wrap_guide": "#989691",
                "editor.indent_guide": "#656460",
                "editor.indent_guide_active": "#989691",
                "editor.document_highlight.read_background": "#403532",
                "editor.document_highlight.write_background": "#332F22",
                "editor.document_highlight.bracket_background": "#443D1C",

                // Integrated terminal
                "terminal.background": "#171313",
                "terminal.foreground": "#FDFAF1",
                "terminal.bright_foreground": "#FDFBF2",
                "terminal.dim_foreground": "#CAC8C1",
                "terminal.ansi.background": "#171313",
                "terminal.ansi.black": "#3F3B3B",
                "terminal.ansi.red": "#B3A875",
                "terminal.ansi.green": "#9BBAAF",
                "terminal.ansi.yellow": "#EBC1B5",
                "terminal.ansi.blue": "#F7E05C",
                "terminal.ansi.magenta": "#EEE7FF",
                "terminal.ansi.cyan": "#FAF1D8",
                "terminal.ansi.white": "#F4F0E3",
                "terminal.ansi.bright_black": "#ABA89F",
                "terminal.ansi.bright_red": "#B3A875",
                "terminal.ansi.bright_green": "#9BBAAF",
                "terminal.ansi.bright_yellow": "#EBC1B5",
                "terminal.ansi.bright_blue": "#F7E05C",
                "terminal.ansi.bright_magenta": "#EEE7FF",
                "terminal.ansi.bright_cyan": "#FAF1D8",
                "terminal.ansi.bright_white": "#F4F0E3",

                // Search functionality
                "search.match_background": "#675550",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7F7D79",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#B1AFA9",

                // Status indicators - success, warning, error, info
                "success": "#9BBAAF",
                "success.background": "#2C3331",
                "success.border": "#9BBAAF",

                "warning": "#EBC1B5",
                "warning.background": "#403532",
                "warning.border": "#EBC1B5",

                "error": "#B3A875",
                "error.background": "#332F22",
                "error.border": "#B3A875",

                "info": "#F7E05C",
                "info.background": "#443D1C",
                "info.border": "#F7E05C",

                "hint": "#CAC8C1",
                "hint.background": "#292927",
                "hint.border": "#CAC8C1",

                // Git status colors
                "created": "#9BBAAF",
                "created.background": "#2C3331",
                "created.border": "#9BBAAF",

                "modified": "#EBC1B5",
                "modified.background": "#403532",
                "modified.border": "#EBC1B5",

                "deleted": "#B3A875",
                "deleted.background": "#332F22",
                "deleted.border": "#B3A875",

                "renamed": "#F7E05C",
                "renamed.background": "#443D1C",
                "renamed.border": "#F7E05C",

                "conflict": "#EEE7FF",
                "conflict.background": "#423F44",
                "conflict.border": "#EEE7FF",

                "ignored": "#B1AFA9",
                "ignored.background": "#1C1B1A",
                "ignored.border": "#B1AFA9",

                "hidden": "#989691",
                "hidden.background": "transparent",
                "hidden.border": "#989691",

                "predictive": "#B1AFA9",
                "predictive.background": "#1C1B1A",
                "predictive.border": "#B1AFA9",

                "unreachable": "#7F7D79",
                "unreachable.background": "#1E1A1A",
                "unreachable.border": "#7F7D79",

                // Link styling
                "link_text.hover": "#F8E36C",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#CAC8C1",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E4E1D9",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#B3A875"
                    },

                    // Strings
                    "string": {
                        "color": "#9BBAAF"
                    },
                    "string.escape": {
                        "color": "#FAF1D8"
                    },
                    "string.regex": {
                        "color": "#FAF1D8"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#EBC1B5"
                    },
                    "constant": {
                        "color": "#EBC1B5"
                    },
                    "boolean": {
                        "color": "#EEE7FF"
                    },

                    // Functions
                    "function": {
                        "color": "#F7E05C"
                    },
                    "constructor": {
                        "color": "#F7E05C"
                    },

                    // Types
                    "type": {
                        "color": "#EEE7FF"
                    },
                    "enum": {
                        "color": "#EEE7FF"
                    },

                    // Variables
                    "variable": {
                        "color": "#FDFAF1"
                    },
                    "variable.special": {
                        "color": "#EEE7FF"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#F7E05C"
                    },
                    "attribute": {
                        "color": "#EBC1B5"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#FAF1D8"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E4E1D9"
                    },
                    "punctuation.bracket": {
                        "color": "#FDFAF1"
                    },
                    "punctuation.delimiter": {
                        "color": "#E4E1D9"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#B3A875"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#F7E05C"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#9BBAAF"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#F7E05C",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#F7E05C",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#FAF1D8"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FDFAF1"
                    },
                    "preproc": {
                        "color": "#B3A875"
                    },
                    "primary": {
                        "color": "#FDFAF1"
                    },
                    "variant": {
                        "color": "#EEE7FF"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#CAC8C1",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#B1AFA9",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#F7E05C",
                        "background": "#F7E05C",
                        "selection": "#5E5527"
                    },
                    {
                        "cursor": "#9BBAAF",
                        "background": "#9BBAAF",
                        "selection": "#3E4744"
                    },
                    {
                        "cursor": "#EBC1B5",
                        "background": "#EBC1B5",
                        "selection": "#5A4A46"
                    },
                    {
                        "cursor": "#EEE7FF",
                        "background": "#EEE7FF",
                        "selection": "#5C5860"
                    }
                ]
            }
        }
    ]
}
