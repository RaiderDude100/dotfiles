{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#1F1D1C",
                "text": "#B1FFDC",
                "text.muted": "#8ECCB0",
                "text.placeholder": "#7CB29A",
                "text.disabled": "#6A9984",
                "text.accent": "#DAB1AA",

                // Icon colors - match text hierarchy
                "icon": "#B1FFDC",
                "icon.muted": "#8ECCB0",
                "icon.disabled": "#6A9984",
                "icon.placeholder": "#7CB29A",
                "icon.accent": "#DAB1AA",

                // Border colors - subtle but visible
                "border": "#476658",
                "border.variant": "#354C42",
                "border.focused": "#DAB1AA",
                "border.selected": "#DAB1AA",
                "border.transparent": "#00000000",
                "border.disabled": "#23332C",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#1F1D1C",
                "elevated_surface.background": "#353433",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#2A3932",
                "element.active": "#4B3E3B",
                "element.selected": "#3F3432",
                "element.disabled": "#2A2827",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#151C19",
                "ghost_element.active": "#2A3932",
                "ghost_element.selected": "#261F1E",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#584845",

                // Application frame elements
                "status_bar.background": "#2A2827",
                "title_bar.background": "#1F1D1C",
                "title_bar.inactive_background": "#262423",
                "toolbar.background": "#1F1D1C",

                // Side panels
                "panel.background": "#1F1D1C",
                "panel.focused_border": "#DAB1AA",

                // Editor panes
                "pane.focused_border": "#DAB1AA",
                "pane_group.border": "#476658",

                // Tab bar and tabs
                "tab_bar.background": "#2A2827",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#1F1D1C",

                // Main editor area
                "editor.background": "#1F1D1C",
                "editor.foreground": "#B1FFDC",
                "editor.gutter.background": "#1F1D1C",
                "editor.subheader.background": "#2A2827",
                "editor.active_line.background": "#151C19",
                "editor.highlighted_line.background": "#25262A",
                "editor.line_number": "#6A9984",
                "editor.active_line_number": "#B1FFDC",
                "editor.invisible": "#58806E",
                "editor.wrap_guide": "#476658",
                "editor.active_wrap_guide": "#6A9984",
                "editor.indent_guide": "#476658",
                "editor.indent_guide_active": "#6A9984",
                "editor.document_highlight.read_background": "#2E3034",
                "editor.document_highlight.write_background": "#382A1D",
                "editor.document_highlight.bracket_background": "#3F3432",

                // Integrated terminal
                "terminal.background": "#1F1D1C",
                "terminal.foreground": "#B1FFDC",
                "terminal.bright_foreground": "#B9FFE0",
                "terminal.dim_foreground": "#8ECCB0",
                "terminal.ansi.background": "#1F1D1C",
                "terminal.ansi.black": "#464442",
                "terminal.ansi.red": "#C18956",
                "terminal.ansi.green": "#12B166",
                "terminal.ansi.yellow": "#9BA1B4",
                "terminal.ansi.blue": "#DAB1AA",
                "terminal.ansi.magenta": "#E6D19E",
                "terminal.ansi.cyan": "#20FF9B",
                "terminal.ansi.white": "#87F7C5",
                "terminal.ansi.bright_black": "#5FAD8A",
                "terminal.ansi.bright_red": "#C18956",
                "terminal.ansi.bright_green": "#12B166",
                "terminal.ansi.bright_yellow": "#9BA1B4",
                "terminal.ansi.bright_blue": "#DAB1AA",
                "terminal.ansi.bright_magenta": "#E6D19E",
                "terminal.ansi.bright_cyan": "#20FF9B",
                "terminal.ansi.bright_white": "#87F7C5",

                // Search functionality
                "search.match_background": "#4A4C53",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#58806E",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#7CB29A",

                // Status indicators - success, warning, error, info
                "success": "#12B166",
                "success.background": "#0D3420",
                "success.border": "#12B166",

                "warning": "#9BA1B4",
                "warning.background": "#2E3034",
                "warning.border": "#9BA1B4",

                "error": "#C18956",
                "error.background": "#382A1D",
                "error.border": "#C18956",

                "info": "#DAB1AA",
                "info.background": "#3F3432",
                "info.border": "#DAB1AA",

                "hint": "#8ECCB0",
                "hint.background": "#1F2B25",
                "hint.border": "#8ECCB0",

                // Git status colors
                "created": "#12B166",
                "created.background": "#0D3420",
                "created.border": "#12B166",

                "modified": "#9BA1B4",
                "modified.background": "#2E3034",
                "modified.border": "#9BA1B4",

                "deleted": "#C18956",
                "deleted.background": "#382A1D",
                "deleted.border": "#C18956",

                "renamed": "#DAB1AA",
                "renamed.background": "#3F3432",
                "renamed.border": "#DAB1AA",

                "conflict": "#E6D19E",
                "conflict.background": "#423C2E",
                "conflict.border": "#E6D19E",

                "ignored": "#7CB29A",
                "ignored.background": "#151C19",
                "ignored.border": "#7CB29A",

                "hidden": "#6A9984",
                "hidden.background": "transparent",
                "hidden.border": "#6A9984",

                "predictive": "#7CB29A",
                "predictive.background": "#151C19",
                "predictive.border": "#7CB29A",

                "unreachable": "#58806E",
                "unreachable.background": "#262423",
                "unreachable.border": "#58806E",

                // Link styling
                "link_text.hover": "#DEB9B3",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#8ECCB0",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#9FE6C6",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#C18956"
                    },

                    // Strings
                    "string": {
                        "color": "#12B166"
                    },
                    "string.escape": {
                        "color": "#20FF9B"
                    },
                    "string.regex": {
                        "color": "#20FF9B"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#9BA1B4"
                    },
                    "constant": {
                        "color": "#9BA1B4"
                    },
                    "boolean": {
                        "color": "#E6D19E"
                    },

                    // Functions
                    "function": {
                        "color": "#DAB1AA"
                    },
                    "constructor": {
                        "color": "#DAB1AA"
                    },

                    // Types
                    "type": {
                        "color": "#E6D19E"
                    },
                    "enum": {
                        "color": "#E6D19E"
                    },

                    // Variables
                    "variable": {
                        "color": "#B1FFDC"
                    },
                    "variable.special": {
                        "color": "#E6D19E"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#DAB1AA"
                    },
                    "attribute": {
                        "color": "#9BA1B4"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#20FF9B"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#9FE6C6"
                    },
                    "punctuation.bracket": {
                        "color": "#B1FFDC"
                    },
                    "punctuation.delimiter": {
                        "color": "#9FE6C6"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#C18956"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#DAB1AA"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#12B166"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#DAB1AA",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#DAB1AA",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#20FF9B"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#B1FFDC"
                    },
                    "preproc": {
                        "color": "#C18956"
                    },
                    "primary": {
                        "color": "#B1FFDC"
                    },
                    "variant": {
                        "color": "#E6D19E"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#8ECCB0",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#7CB29A",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#DAB1AA",
                        "background": "#DAB1AA",
                        "selection": "#584845"
                    },
                    {
                        "cursor": "#12B166",
                        "background": "#12B166",
                        "selection": "#12482E"
                    },
                    {
                        "cursor": "#9BA1B4",
                        "background": "#9BA1B4",
                        "selection": "#414249"
                    },
                    {
                        "cursor": "#E6D19E",
                        "background": "#E6D19E",
                        "selection": "#5C5341"
                    }
                ]
            }
        }
    ]
}
