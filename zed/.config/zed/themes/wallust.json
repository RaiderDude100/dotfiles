{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#2F3032",
                "text": "#F9F2EC",
                "text.muted": "#C7C2BD",
                "text.placeholder": "#AEA9A5",
                "text.disabled": "#95918E",
                "text.accent": "#AE8E8D",

                // Icon colors - match text hierarchy
                "icon": "#F9F2EC",
                "icon.muted": "#C7C2BD",
                "icon.disabled": "#95918E",
                "icon.placeholder": "#AEA9A5",
                "icon.accent": "#AE8E8D",

                // Border colors - subtle but visible
                "border": "#64615E",
                "border.variant": "#4B4947",
                "border.focused": "#AE8E8D",
                "border.selected": "#AE8E8D",
                "border.transparent": "#00000000",
                "border.disabled": "#32302F",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#2F3032",
                "elevated_surface.background": "#444546",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#3B3A39",
                "element.active": "#42393A",
                "element.selected": "#373030",
                "element.disabled": "#393A3C",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1E1D1D",
                "ghost_element.active": "#3B3A39",
                "ghost_element.selected": "#211C1D",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#4D4243",

                // Application frame elements
                "status_bar.background": "#393A3C",
                "title_bar.background": "#2F3032",
                "title_bar.inactive_background": "#353638",
                "toolbar.background": "#2F3032",

                // Side panels
                "panel.background": "#2F3032",
                "panel.focused_border": "#AE8E8D",

                // Editor panes
                "pane.focused_border": "#AE8E8D",
                "pane_group.border": "#64615E",

                // Tab bar and tabs
                "tab_bar.background": "#393A3C",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#2F3032",

                // Main editor area
                "editor.background": "#2F3032",
                "editor.foreground": "#F9F2EC",
                "editor.gutter.background": "#2F3032",
                "editor.subheader.background": "#393A3C",
                "editor.active_line.background": "#1E1D1D",
                "editor.highlighted_line.background": "#1F232A",
                "editor.line_number": "#95918E",
                "editor.active_line_number": "#F9F2EC",
                "editor.invisible": "#7D7976",
                "editor.wrap_guide": "#64615E",
                "editor.active_wrap_guide": "#95918E",
                "editor.indent_guide": "#64615E",
                "editor.indent_guide_active": "#95918E",
                "editor.document_highlight.read_background": "#272C34",
                "editor.document_highlight.write_background": "#17181C",
                "editor.document_highlight.bracket_background": "#373030",

                // Integrated terminal
                "terminal.background": "#2F3032",
                "terminal.foreground": "#F9F2EC",
                "terminal.bright_foreground": "#FAF3EE",
                "terminal.dim_foreground": "#C7C2BD",
                "terminal.ansi.background": "#2F3032",
                "terminal.ansi.black": "#545457",
                "terminal.ansi.red": "#2C303B",
                "terminal.ansi.green": "#6D5C6B",
                "terminal.ansi.yellow": "#6E7E9E",
                "terminal.ansi.blue": "#AE8E8D",
                "terminal.ansi.magenta": "#B8B9D0",
                "terminal.ansi.cyan": "#EEDBC9",
                "terminal.ansi.white": "#EEE5DC",
                "terminal.ansi.bright_black": "#A7A09A",
                "terminal.ansi.bright_red": "#2C303B",
                "terminal.ansi.bright_green": "#6D5C6B",
                "terminal.ansi.bright_yellow": "#6E7E9E",
                "terminal.ansi.bright_blue": "#AE8E8D",
                "terminal.ansi.bright_magenta": "#B8B9D0",
                "terminal.ansi.bright_cyan": "#EEDBC9",
                "terminal.ansi.bright_white": "#EEE5DC",

                // Search functionality
                "search.match_background": "#3E4653",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7D7976",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#AEA9A5",

                // Status indicators - success, warning, error, info
                "success": "#6D5C6B",
                "success.background": "#272327",
                "success.border": "#6D5C6B",

                "warning": "#6E7E9E",
                "warning.background": "#272C34",
                "warning.border": "#6E7E9E",

                "error": "#2C303B",
                "error.background": "#17181C",
                "error.border": "#2C303B",

                "info": "#AE8E8D",
                "info.background": "#373030",
                "info.border": "#AE8E8D",

                "hint": "#C7C2BD",
                "hint.background": "#2C2C2B",
                "hint.border": "#C7C2BD",

                // Git status colors
                "created": "#6D5C6B",
                "created.background": "#272327",
                "created.border": "#6D5C6B",

                "modified": "#6E7E9E",
                "modified.background": "#272C34",
                "modified.border": "#6E7E9E",

                "deleted": "#2C303B",
                "deleted.background": "#17181C",
                "deleted.border": "#2C303B",

                "renamed": "#AE8E8D",
                "renamed.background": "#373030",
                "renamed.border": "#AE8E8D",

                "conflict": "#B8B9D0",
                "conflict.background": "#3A3A40",
                "conflict.border": "#B8B9D0",

                "ignored": "#AEA9A5",
                "ignored.background": "#1E1D1D",
                "ignored.border": "#AEA9A5",

                "hidden": "#95918E",
                "hidden.background": "transparent",
                "hidden.border": "#95918E",

                "predictive": "#AEA9A5",
                "predictive.background": "#1E1D1D",
                "predictive.border": "#AEA9A5",

                "unreachable": "#7D7976",
                "unreachable.background": "#353638",
                "unreachable.border": "#7D7976",

                // Link styling
                "link_text.hover": "#B69998",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#C7C2BD",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E0DAD4",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#2C303B"
                    },

                    // Strings
                    "string": {
                        "color": "#6D5C6B"
                    },
                    "string.escape": {
                        "color": "#EEDBC9"
                    },
                    "string.regex": {
                        "color": "#EEDBC9"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#6E7E9E"
                    },
                    "constant": {
                        "color": "#6E7E9E"
                    },
                    "boolean": {
                        "color": "#B8B9D0"
                    },

                    // Functions
                    "function": {
                        "color": "#AE8E8D"
                    },
                    "constructor": {
                        "color": "#AE8E8D"
                    },

                    // Types
                    "type": {
                        "color": "#B8B9D0"
                    },
                    "enum": {
                        "color": "#B8B9D0"
                    },

                    // Variables
                    "variable": {
                        "color": "#F9F2EC"
                    },
                    "variable.special": {
                        "color": "#B8B9D0"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#AE8E8D"
                    },
                    "attribute": {
                        "color": "#6E7E9E"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#EEDBC9"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E0DAD4"
                    },
                    "punctuation.bracket": {
                        "color": "#F9F2EC"
                    },
                    "punctuation.delimiter": {
                        "color": "#E0DAD4"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#2C303B"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#AE8E8D"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#6D5C6B"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#AE8E8D",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#AE8E8D",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#EEDBC9"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#F9F2EC"
                    },
                    "preproc": {
                        "color": "#2C303B"
                    },
                    "primary": {
                        "color": "#F9F2EC"
                    },
                    "variant": {
                        "color": "#B8B9D0"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#C7C2BD",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#AEA9A5",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#AE8E8D",
                        "background": "#AE8E8D",
                        "selection": "#4D4243"
                    },
                    {
                        "cursor": "#6D5C6B",
                        "background": "#6D5C6B",
                        "selection": "#373137"
                    },
                    {
                        "cursor": "#6E7E9E",
                        "background": "#6E7E9E",
                        "selection": "#373D49"
                    },
                    {
                        "cursor": "#B8B9D0",
                        "background": "#B8B9D0",
                        "selection": "#51515A"
                    }
                ]
            }
        }
    ]
}
