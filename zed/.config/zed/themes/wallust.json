{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#29262C",
                "text": "#FCF5EC",
                "text.muted": "#CAC4BD",
                "text.placeholder": "#B0ACA5",
                "text.disabled": "#97938E",
                "text.accent": "#FBB0B9",

                // Icon colors - match text hierarchy
                "icon": "#FCF5EC",
                "icon.muted": "#CAC4BD",
                "icon.disabled": "#97938E",
                "icon.placeholder": "#B0ACA5",
                "icon.accent": "#FBB0B9",

                // Border colors - subtle but visible
                "border": "#65625E",
                "border.variant": "#4C4A47",
                "border.focused": "#FBB0B9",
                "border.selected": "#FBB0B9",
                "border.transparent": "#00000000",
                "border.disabled": "#32312F",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#29262C",
                "elevated_surface.background": "#3E3C41",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#3B3938",
                "element.active": "#584044",
                "element.selected": "#493639",
                "element.disabled": "#343137",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1D1C1C",
                "ghost_element.active": "#3B3938",
                "ghost_element.selected": "#2C2022",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#664B50",

                // Application frame elements
                "status_bar.background": "#343137",
                "title_bar.background": "#29262C",
                "title_bar.inactive_background": "#2F2D32",
                "toolbar.background": "#29262C",

                // Side panels
                "panel.background": "#29262C",
                "panel.focused_border": "#FBB0B9",

                // Editor panes
                "pane.focused_border": "#FBB0B9",
                "pane_group.border": "#65625E",

                // Tab bar and tabs
                "tab_bar.background": "#343137",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#29262C",

                // Main editor area
                "editor.background": "#29262C",
                "editor.foreground": "#FCF5EC",
                "editor.gutter.background": "#29262C",
                "editor.subheader.background": "#343137",
                "editor.active_line.background": "#1D1C1C",
                "editor.highlighted_line.background": "#362A1C",
                "editor.line_number": "#97938E",
                "editor.active_line_number": "#FCF5EC",
                "editor.invisible": "#7E7B76",
                "editor.wrap_guide": "#65625E",
                "editor.active_wrap_guide": "#97938E",
                "editor.indent_guide": "#65625E",
                "editor.indent_guide_active": "#97938E",
                "editor.document_highlight.read_background": "#443523",
                "editor.document_highlight.write_background": "#3A2C37",
                "editor.document_highlight.bracket_background": "#493639",

                // Integrated terminal
                "terminal.background": "#29262C",
                "terminal.foreground": "#FCF5EC",
                "terminal.bright_foreground": "#FCF6EE",
                "terminal.dim_foreground": "#CAC4BD",
                "terminal.ansi.background": "#29262C",
                "terminal.ansi.black": "#4F4C52",
                "terminal.ansi.red": "#BF89AF",
                "terminal.ansi.green": "#8EBCCD",
                "terminal.ansi.yellow": "#E6AD5F",
                "terminal.ansi.blue": "#FBB0B9",
                "terminal.ansi.magenta": "#C7DED0",
                "terminal.ansi.cyan": "#F6E2C8",
                "terminal.ansi.white": "#F2E8DB",
                "terminal.ansi.bright_black": "#A9A299",
                "terminal.ansi.bright_red": "#BF89AF",
                "terminal.ansi.bright_green": "#8EBCCD",
                "terminal.ansi.bright_yellow": "#E6AD5F",
                "terminal.ansi.bright_blue": "#FBB0B9",
                "terminal.ansi.bright_magenta": "#C7DED0",
                "terminal.ansi.bright_cyan": "#F6E2C8",
                "terminal.ansi.bright_white": "#F2E8DB",

                // Search functionality
                "search.match_background": "#6D5538",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7E7B76",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#B0ACA5",

                // Status indicators - success, warning, error, info
                "success": "#8EBCCD",
                "success.background": "#2E393F",
                "success.border": "#8EBCCD",

                "warning": "#E6AD5F",
                "warning.background": "#443523",
                "warning.border": "#E6AD5F",

                "error": "#BF89AF",
                "error.background": "#3A2C37",
                "error.border": "#BF89AF",

                "info": "#FBB0B9",
                "info.background": "#493639",
                "info.border": "#FBB0B9",

                "hint": "#CAC4BD",
                "hint.background": "#2C2B2A",
                "hint.border": "#CAC4BD",

                // Git status colors
                "created": "#8EBCCD",
                "created.background": "#2E393F",
                "created.border": "#8EBCCD",

                "modified": "#E6AD5F",
                "modified.background": "#443523",
                "modified.border": "#E6AD5F",

                "deleted": "#BF89AF",
                "deleted.background": "#3A2C37",
                "deleted.border": "#BF89AF",

                "renamed": "#FBB0B9",
                "renamed.background": "#493639",
                "renamed.border": "#FBB0B9",

                "conflict": "#C7DED0",
                "conflict.background": "#3C413F",
                "conflict.border": "#C7DED0",

                "ignored": "#B0ACA5",
                "ignored.background": "#1D1C1C",
                "ignored.border": "#B0ACA5",

                "hidden": "#97938E",
                "hidden.background": "transparent",
                "hidden.border": "#97938E",

                "predictive": "#B0ACA5",
                "predictive.background": "#1D1C1C",
                "predictive.border": "#B0ACA5",

                "unreachable": "#7E7B76",
                "unreachable.background": "#2F2D32",
                "unreachable.border": "#7E7B76",

                // Link styling
                "link_text.hover": "#FBB8C0",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#CAC4BD",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E3DDD4",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#BF89AF"
                    },

                    // Strings
                    "string": {
                        "color": "#8EBCCD"
                    },
                    "string.escape": {
                        "color": "#F6E2C8"
                    },
                    "string.regex": {
                        "color": "#F6E2C8"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#E6AD5F"
                    },
                    "constant": {
                        "color": "#E6AD5F"
                    },
                    "boolean": {
                        "color": "#C7DED0"
                    },

                    // Functions
                    "function": {
                        "color": "#FBB0B9"
                    },
                    "constructor": {
                        "color": "#FBB0B9"
                    },

                    // Types
                    "type": {
                        "color": "#C7DED0"
                    },
                    "enum": {
                        "color": "#C7DED0"
                    },

                    // Variables
                    "variable": {
                        "color": "#FCF5EC"
                    },
                    "variable.special": {
                        "color": "#C7DED0"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#FBB0B9"
                    },
                    "attribute": {
                        "color": "#E6AD5F"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#F6E2C8"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E3DDD4"
                    },
                    "punctuation.bracket": {
                        "color": "#FCF5EC"
                    },
                    "punctuation.delimiter": {
                        "color": "#E3DDD4"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#BF89AF"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#FBB0B9"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#8EBCCD"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#FBB0B9",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#FBB0B9",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#F6E2C8"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FCF5EC"
                    },
                    "preproc": {
                        "color": "#BF89AF"
                    },
                    "primary": {
                        "color": "#FCF5EC"
                    },
                    "variant": {
                        "color": "#C7DED0"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#CAC4BD",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#B0ACA5",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#FBB0B9",
                        "background": "#FBB0B9",
                        "selection": "#664B50"
                    },
                    {
                        "cursor": "#8EBCCD",
                        "background": "#8EBCCD",
                        "selection": "#404F58"
                    },
                    {
                        "cursor": "#E6AD5F",
                        "background": "#E6AD5F",
                        "selection": "#5F4A31"
                    },
                    {
                        "cursor": "#C7DED0",
                        "background": "#C7DED0",
                        "selection": "#545B58"
                    }
                ]
            }
        }
    ]
}
