{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#161518",
                "text": "#FEEDF0",
                "text.muted": "#CBBEC0",
                "text.placeholder": "#B2A6A8",
                "text.disabled": "#988E90",
                "text.accent": "#8A89C2",

                // Icon colors - match text hierarchy
                "icon": "#FEEDF0",
                "icon.muted": "#CBBEC0",
                "icon.disabled": "#988E90",
                "icon.placeholder": "#B2A6A8",
                "icon.accent": "#8A89C2",

                // Border colors - subtle but visible
                "border": "#665F60",
                "border.variant": "#4C4748",
                "border.focused": "#8A89C2",
                "border.selected": "#8A89C2",
                "border.transparent": "#00000000",
                "border.disabled": "#332F30",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#161518",
                "elevated_surface.background": "#2D2C2F",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#373435",
                "element.active": "#302F41",
                "element.selected": "#282837",
                "element.disabled": "#222124",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1C1A1A",
                "ghost_element.active": "#373435",
                "ghost_element.selected": "#181821",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#38374C",

                // Application frame elements
                "status_bar.background": "#222124",
                "title_bar.background": "#161518",
                "title_bar.inactive_background": "#1D1C1F",
                "toolbar.background": "#161518",

                // Side panels
                "panel.background": "#161518",
                "panel.focused_border": "#8A89C2",

                // Editor panes
                "pane.focused_border": "#8A89C2",
                "pane_group.border": "#665F60",

                // Tab bar and tabs
                "tab_bar.background": "#222124",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#161518",

                // Main editor area
                "editor.background": "#161518",
                "editor.foreground": "#FEEDF0",
                "editor.gutter.background": "#161518",
                "editor.subheader.background": "#222124",
                "editor.active_line.background": "#1C1A1A",
                "editor.highlighted_line.background": "#171823",
                "editor.line_number": "#988E90",
                "editor.active_line_number": "#FEEDF0",
                "editor.invisible": "#7F7778",
                "editor.wrap_guide": "#665F60",
                "editor.active_wrap_guide": "#988E90",
                "editor.indent_guide": "#665F60",
                "editor.indent_guide_active": "#988E90",
                "editor.document_highlight.read_background": "#1D1E2C",
                "editor.document_highlight.write_background": "#15121F",
                "editor.document_highlight.bracket_background": "#282837",

                // Integrated terminal
                "terminal.background": "#161518",
                "terminal.foreground": "#FEEDF0",
                "terminal.bright_foreground": "#FEEFF2",
                "terminal.dim_foreground": "#CBBEC0",
                "terminal.ansi.background": "#161518",
                "terminal.ansi.black": "#3D3C3F",
                "terminal.ansi.red": "#3E3164",
                "terminal.ansi.green": "#784964",
                "terminal.ansi.yellow": "#5C6199",
                "terminal.ansi.blue": "#8A89C2",
                "terminal.ansi.magenta": "#C9BAE5",
                "terminal.ansi.cyan": "#FDCCD4",
                "terminal.ansi.white": "#F6DDE1",
                "terminal.ansi.bright_black": "#AC9B9E",
                "terminal.ansi.bright_red": "#3E3164",
                "terminal.ansi.bright_green": "#784964",
                "terminal.ansi.bright_yellow": "#5C6199",
                "terminal.ansi.bright_blue": "#8A89C2",
                "terminal.ansi.bright_magenta": "#C9BAE5",
                "terminal.ansi.bright_cyan": "#FDCCD4",
                "terminal.ansi.bright_white": "#F6DDE1",

                // Search functionality
                "search.match_background": "#2E2F46",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7F7778",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#B2A6A8",

                // Status indicators - success, warning, error, info
                "success": "#784964",
                "success.background": "#24181F",
                "success.border": "#784964",

                "warning": "#5C6199",
                "warning.background": "#1D1E2C",
                "warning.border": "#5C6199",

                "error": "#3E3164",
                "error.background": "#15121F",
                "error.border": "#3E3164",

                "info": "#8A89C2",
                "info.background": "#282837",
                "info.border": "#8A89C2",

                "hint": "#CBBEC0",
                "hint.background": "#292728",
                "hint.border": "#CBBEC0",

                // Git status colors
                "created": "#784964",
                "created.background": "#24181F",
                "created.border": "#784964",

                "modified": "#5C6199",
                "modified.background": "#1D1E2C",
                "modified.border": "#5C6199",

                "deleted": "#3E3164",
                "deleted.background": "#15121F",
                "deleted.border": "#3E3164",

                "renamed": "#8A89C2",
                "renamed.background": "#282837",
                "renamed.border": "#8A89C2",

                "conflict": "#C9BAE5",
                "conflict.background": "#383440",
                "conflict.border": "#C9BAE5",

                "ignored": "#B2A6A8",
                "ignored.background": "#1C1A1A",
                "ignored.border": "#B2A6A8",

                "hidden": "#988E90",
                "hidden.background": "transparent",
                "hidden.border": "#988E90",

                "predictive": "#B2A6A8",
                "predictive.background": "#1C1A1A",
                "predictive.border": "#B2A6A8",

                "unreachable": "#7F7778",
                "unreachable.background": "#1D1C1F",
                "unreachable.border": "#7F7778",

                // Link styling
                "link_text.hover": "#9695C8",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#CBBEC0",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E5D5D8",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#3E3164"
                    },

                    // Strings
                    "string": {
                        "color": "#784964"
                    },
                    "string.escape": {
                        "color": "#FDCCD4"
                    },
                    "string.regex": {
                        "color": "#FDCCD4"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#5C6199"
                    },
                    "constant": {
                        "color": "#5C6199"
                    },
                    "boolean": {
                        "color": "#C9BAE5"
                    },

                    // Functions
                    "function": {
                        "color": "#8A89C2"
                    },
                    "constructor": {
                        "color": "#8A89C2"
                    },

                    // Types
                    "type": {
                        "color": "#C9BAE5"
                    },
                    "enum": {
                        "color": "#C9BAE5"
                    },

                    // Variables
                    "variable": {
                        "color": "#FEEDF0"
                    },
                    "variable.special": {
                        "color": "#C9BAE5"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#8A89C2"
                    },
                    "attribute": {
                        "color": "#5C6199"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#FDCCD4"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E5D5D8"
                    },
                    "punctuation.bracket": {
                        "color": "#FEEDF0"
                    },
                    "punctuation.delimiter": {
                        "color": "#E5D5D8"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#3E3164"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#8A89C2"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#784964"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#8A89C2",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#8A89C2",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#FDCCD4"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FEEDF0"
                    },
                    "preproc": {
                        "color": "#3E3164"
                    },
                    "primary": {
                        "color": "#FEEDF0"
                    },
                    "variant": {
                        "color": "#C9BAE5"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#CBBEC0",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#B2A6A8",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#8A89C2",
                        "background": "#8A89C2",
                        "selection": "#38374C"
                    },
                    {
                        "cursor": "#784964",
                        "background": "#784964",
                        "selection": "#32212B"
                    },
                    {
                        "cursor": "#5C6199",
                        "background": "#5C6199",
                        "selection": "#28293E"
                    },
                    {
                        "cursor": "#C9BAE5",
                        "background": "#C9BAE5",
                        "selection": "#4E4959"
                    }
                ]
            }
        }
    ]
}
